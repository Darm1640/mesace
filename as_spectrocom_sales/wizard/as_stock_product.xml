<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_stock_products_wiz" model="ir.ui.view">
            <field name="name">Stock de Producto</field>
            <field name="model">as.stock.product</field>
            <field name="arch" type="xml">
                <form string="Stock de Producto" create="false">
                    <group col="4">
                        <!-- <field name="sale_line_id"  /> -->
                        <field name="product_id" readonly="True" />
                        <field name="default_code" />
                        <field name="udm" readonly="True" />
                        <field name="udm_sale" readonly="True" />
                        <field name="stock" readonly="True" />

                    </group>

                    <field name="lines_stock_ids" readonly="True">
                        <tree editable="bottom" create="0" edit="0" delete="0">
                            <field name="route_id" />
                            <field name="location_id" />
                            <field name="lot_ids" widget="many2many_tags"/>
                            <field name="as_lot_stock" />
                            <field name="stock" />
                            <!-- <button name="update_sale_line_route" string="Aplicar" type="object" /> -->
                        </tree>
                    </field>


                    <group>
                        <field name="lines_ids" readonly="True" />
                    </group>

                </form>
            </field>
        </record>
        <record id="view_stock_product_linewiz" model="ir.ui.view">
            <field name="name">Stock de Producto Linea</field>
            <field name="model">as.stock.product.line</field>
            <field name="arch" type="xml">
                <tree string="Stock de Producto">
                    <field name="product_id" />
                    <field name="default_code" />
                    <field name="lot_ids" widget="many2many_tags" />
                    <field name="location_ids" widget="many2many_tags" />
                    <field name="cantidad" />

                </tree>
            </field>
        </record>
        <record id="view_stock_stock_linewiz" model="ir.ui.view">
            <field name="name">Stock de Producto Linea</field>
            <field name="model">as.stock.route.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="0" edit="0" delete="0">
                    <field name="route_id" />
                    <field name="location_id" />
                    <field name="lot_ids" widget="many2many_tags" />
                    <field name="stock" />
                    <button name="update_sale_line_route" string="Aplicar" type="object" />
                </tree>
            </field>
        </record>
        <record id="action_product_stock1_qweb" model="ir.actions.act_window">
            <field name="name">Stock de Producto Linea</field>
            <field name="res_model">as.stock.route.line</field>
            <!-- <field name="view_mode">tree,form</field> -->
            <field name="view_id" ref="view_stock_stock_linewiz" />
            <field name="target">new</field>
        </record>
        <record id="action_product_stock2_qweb" model="ir.actions.act_window">
            <field name="name">Stock de Producto Linea</field>
            <field name="res_model">as.stock.product.line</field>
            <!-- <field name="view_mode">tree,form</field> -->
            <field name="view_id" ref="view_stock_product_linewiz" />
            <field name="target">new</field>
        </record>
        <record id="action_product_stocks_qweb" model="ir.actions.act_window">
            <field name="name">Stock de Producto</field>
            <field name="res_model">as.stock.product</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_stock_products_wiz" />
            <field name="target">new</field>
        </record>


    </data>
</odoo>