<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="as_moras_excel" model="ir.ui.view">
        <field name="name">Reporte de mora</field>
        <field name="model">as.report.mora.excel</field>
        <field name="arch" type="xml">
            <form string="Reporte de mora">
                <group col="4">
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="as_almacen" widget="many2many_tags" />
                    <!-- <field name="as_negocio" widget="many2many_tags" /> -->
                    <field name="as_cliente" widget="many2many_tags"
                                options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                </group>
                <footer>
                    <button name="imprimir_excel" type="object" default_focus="1" string="Generar excel"
                        context="{'xlsx_export':1}" icon="fa-print" class="oe_highlight" />
                    or
                    <button string="Cancelar" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="as_action_mora_excel" model="ir.actions.act_window">
        <field name="name">Reporte de mora</field>
        <field name="res_model">as.report.mora.excel</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="as_moras_excel" />
        <field name="target">new</field>
    </record>
    
       <report
        id="reporte_mora_xlsx"
        model="as.report.mora.excel"
        string="Reporte de SIAT"
        report_type="xlsx"
        name="as_spectrocom_sales.reporte_mora_xlsx.xlsx" 
        file="as_spectrocom_sales.reporte_mora_xlsx.xlsx"
        attachment_use="False" />


        <menuitem id="as_menu_mora_details_report"
         name="Reporte de moras"
         parent="as_spectrocom_sales.as_asstes_reporte_siat"
         action="as_action_mora_excel"
         sequence="10"/>

    </data>

</odoo>