<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="as_facturas_facturas_pagadas_pendientes" model="ir.ui.view">
        <field name="name">Reporte de Facturas Pagadas y Pendientes</field>
        <field name="model">as.report.factura.pagadas.pendientes</field>
        <field name="arch" type="xml">
            <form string="Reporte de Facturas Pagadas y Pendientes">
                <group col="4">
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="as_cliente" widget="many2many_tags"
                                options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                </group>
                <footer>
                    <button name="imprimir_excel" type="object" default_focus="1" string="Generar excel"
                        context="{'xlsx_export':1}" icon="fa-print" class="oe_highlight" />
                    or
                    <button string="Cancelar" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="as_action_assets_fact_pagadas_pendientes" model="ir.actions.act_window">
        <field name="name">Reporte de Facturas Pagadas y Pendientes</field>
        <field name="res_model">as.report.factura.pagadas.pendientes</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="as_facturas_facturas_pagadas_pendientes" />
        <field name="target">new</field>
    </record>
    
       <report
        id="reporte_facturas_paga_pendi"
        model="as.report.factura.pagadas.pendientes"
        string="Reporte de SIAT"
        report_type="xlsx"
        name="as_spectrocom_sales.reporte_facturas_paga_pendi.xlsx" 
        file="as_spectrocom_sales.reporte_facturas_paga_pendi.xlsx"
        attachment_use="False" />
        

        <menuitem id="as_menu_facturas_pagadas_y_pendientes"
         name="Reporte Facturas Pagadas y Pendientes"
         parent="as_spectrocom_sales.as_asstes_reporte_siat"
         action="as_action_assets_fact_pagadas_pendientes"
         sequence="11"/>
    </data>

</odoo>