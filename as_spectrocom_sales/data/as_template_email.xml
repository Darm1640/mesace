<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_mail_template_tarea_adjuntos" model="mail.template">
            <field name="name">DEFINITIVO: Confirmation Email</field>
            <field name="model_id" ref="project.model_project_task" />
            <field name="subject">PENDIENTE DE REVISION TAREA: Ref(${object.name})</field>
            <field name="email_from">{object.company_id.partner_id.email}</field>
            <field name="email_to">facturacion@espectrocom.com, jean.camara@espectrocom.com, erick.gamio@espectrocom.com, victor.abrego@espectrocom.com</field>
            <field name="email_cc">oscar.morant@espectrocom.com, ronald.quiroga@espectrocom.com</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 12px;">
                        Usted,<br /><br /> 
                        tiene una TAREA para su revision del el cliente ${object.partner_id.name} 
                         <b><a href='${website_url}/web#id=${object.id}&amp;action=511&amp;active_id==${object.id}&amp;model=project.task&amp;view_type=form&amp;cids=${object.company_id.id}&amp;menu_id=340'>${object.name}</a></b>.
                        <br /><br /> Revisar a la brevedad posible. Gracias,
                        <br />
                    </p>
                </div>
            </field>
            <field name="report_template" ref="as_spectrocom_sales.as_reporte_orden_trabajo"/>
            <field name="report_name">Orden de trabajo ${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
        </record>
    </data>
</odoo>