<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="as_proyectos_form" model="ir.ui.view">
        <field name="name">Proyectos</field>
        <field name="model">as.template.project</field>
        <field name="arch" type="xml">
            <form string="Nombres de Producto">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group col="4">
                    <field name="as_numeracion_interna" />
                    <field name="as_alias_lugar"/>
                    <field name="as_alias" />
                    <field name="as_cont_project" />

                    </group>
                    <field name="as_sales_ids" />
                    <group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="as_proyectos_tree" model="ir.ui.view">
        <field name="name">Proyectos</field>
        <field name="model">as.template.project</field>
        <field name="arch" type="xml">
            <tree string="Nombres de Producto">
                    <field name="name" />
                       <field name="as_numeracion_interna" />
                    <field name="as_alias_lugar"/>
                    <field name="as_alias" />
                    <field name="as_cont_project" />
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_proyectos_wiew">
        <field name="name">Proyectos</field>
        <field name="res_model">as.template.project</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="as_proyectos_tree" />

    </record>
    <menuitem id="as_proyectos_menu" name="Proyectos" action="action_proyectos_wiew"
        parent="sale.sale_order_menu" sequence="8"/>

</odoo>