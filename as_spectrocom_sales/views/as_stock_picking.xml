<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_picking_tree_draft" model="ir.actions.act_window">
            <field name="name">Tranferencias en Borrador</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain">[('state', '=', 'draft')]</field>
            <field name="context">{'state': 'draft'}</field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No transfer found. Let's create one!
                </p><p>
                    Transfers allow you to move products from one location to another.
                </p>
            </field>
        </record>
        <record id="as_view_picking_form_x2" model="ir.ui.view">
            <field name="name">as.view.picking.form.x4</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.stock_picking_type_kanban" />
            <field name="arch" type="xml">
                <!-- <xpath expr="//div[@class='o_kanban_primary_right']" position="before"> -->
                <xpath expr="//div[hasclass('o_kanban_primary_right')]" position="inside">
                    <div t-if="record.count_picking_draft.raw_value > 0" class="row">
                        <div class="col-12">
                            <a name="get_action_picking_tree_draft" type="object">
                                <field name="count_picking_draft" />
                                Borrador
                            </a>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="as_view_picking_spec_form">
            <field name="name">as.view.picking.spec.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field eval="12" name="priority" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_id']" position="after">
                      <field name="as_tipo_retencion" />
                </xpath>
               
            </field>
        </record>
        <record id="action_update_cant" model="ir.actions.server">
        <field name="name">Actualizar activos</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">if records:
            action = records.action_update_activos()
        </field>
    </record>
        
    </data>
</odoo>