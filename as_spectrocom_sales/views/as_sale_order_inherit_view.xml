<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Sale Order form view -->
	<record id="as_view_order_form_inherit_view" model="ir.ui.view">
		<field name="name">as.view.order.form.inherit.view</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="priority">55</field>
		<field name="arch" type="xml">
			
			<xpath expr="//notebook//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_unit']"
				position="after">
				<button name="get_stock_virtual" type="object" icon="fa-desktop"/>
			</xpath>
			<xpath expr="//notebook//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_uom_qty']"
				position="after">
				<button name="as_add_nota" type="object" icon="fa-android"/> 
			</xpath>


		</field>
	</record>
	<record id="as_view_order_line_form_inherit_view" model="ir.ui.view">
		<field name="name">as.view.order.line.form.inherit.view</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
			 <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="after">
                <!-- <field name="as_bussiness_id" />
				<field name="as_type_id" /> -->
            </xpath>

		</field>
	</record>

</odoo>