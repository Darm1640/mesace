<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_codey_spectrocom_form2" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <data>
              
                <xpath expr="//field[@name='type']" position="after">
                    <field name="as_bussiness_id" />
                    <field name="as_type_id" />
                    <field name="as_nota" />
                </xpath>

            </data>
        </field>
    </record>
    <record model="ir.ui.view" id="as_product_template_stock_form_view_spectrocom">
        <field name="name">as.product.template.stock.form.view.spectrocom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_part_num']" position="replace">
                <field name="product_part_num" attrs="{'required': [('as_obligatorio_check','!=',False),('can_be_expensed','=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='product_part_num']" position="after">
                <!-- <field name="as_obligatorio_check"/> -->
                <!-- <label for="as_obligatorio_check" string="Discount Mode"/> -->
                <div class="o_row">
                    <field name="as_obligatorio_check"/>
                    <label for="as_obligatorio_check"/>
                </div>
            </xpath>
        </field>
    </record>
    <record id="view_product_product_codey_especx_form" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <data>
            <xpath expr="//field[@name='type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </data>
        </field>
    </record>
    <record id="view_product_product_codey_espec" model="ir.ui.view">
        <field name="name">product.product.form.inherit.ca.pos</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='default_code']" position="after">
                    
                    <field name="type"/>
                    <field name="default_code"/>
                    <field name="barcode"/>
                    <field name="as_bussiness_id" />
                    <field name="as_type_id" />
                    <field name="as_nota" invisible="True"/>
                    <field name="categ_id" />
                    
                </xpath>
            </data>
        </field>
    </record>
    <record id="view_product_variant_form" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
        <field name="arch" type="xml">
            <data>
            
                <xpath expr="//group[@name='weight']" position="after">
                    <field name="as_bussiness_id" />
                    <field name="as_type_id" />

                </xpath>

            </data>
        </field>
    </record>
    <record id="view_product_variantes_gastos_form" model="ir.ui.view">
        <field name="name">view.product.variantes.gastos.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='expense_policy']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </data>
        </field>
    </record>
   
</odoo>