<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulario pedidos, columnas campos adicionales -->
        
        <record id="as_sale_view_sale_order_form" model="ir.ui.view">
            <field name="name">as.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="as_dato_factura" />
                    <field name="as_forma_pago_id" />
                </xpath>
                
            </field>
        </record>
        <record id="as_sale_view_sale_order_form_dias_venc" model="ir.ui.view">
            <field name="name">as.sale.order.form.dias_venc</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="before">
                    <field name="as_dias_vencimiento" />
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>