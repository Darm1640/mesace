<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_instructive_name" model="ir.ui.view">
            <field name="name">as.as.instructive.sale</field>
            <field name="model">as.instructive.sale</field>
            <field name="arch" type="xml">
                <form string="Instrutivo de Trabajo">
                    <sheet>
                            <group>
                                <field name="name" />
                                <field name="sequence" />
                                <field name="as_template_id" />
                                <field name="as_type_id" />
                                <field name="as_partner_id" />
                                <field name="as_lugar" />
                                <field name="as_duration" />
                                <field name="as_duration_type" />
                                <field name="as_note" />
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_instructive_name" model="ir.ui.view">
            <field name="name">as.as.instructive.sale</field>
            <field name="model">as.instructive.sale</field>
            <field name="arch" type="xml">
                <tree string="Instrutivo de Trabajo">
                      <field name="sequence" widget="handle"/>
                    <field name="name" />
                    <field name="as_template_id" />
                    <field name="as_type_id" />
                    <field name="as_partner_id" />
                    <field name="as_lugar" />
                    <field name="as_duration" />
                    <field name="as_duration_type" />
                    <field name="as_note" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_proposal_instructive_type">
            <field name="name">Instrutivo de Trabajo</field>
            <field name="res_model">as.instructive.sale</field>
            <field name="view_mode">tree,form</field>
        </record>

       

        <menuitem id="as_instructive_type_menu" name="Instrutivo de Trabajo" parent="sale.product_menu_catalog"
            action="action_proposal_instructive_type" />

    </data>
</odoo>