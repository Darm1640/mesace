<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_account_move_field_etapa" model="ir.ui.view">
            <field name="name">as.account.move.field.etapa</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="as_etapa" />
                    <!-- <field name="as_razon_social" /> -->
                </xpath>
            </field>
        </record>

        <record id="as_account_move_new_date_etapa" model="ir.ui.view">
            <field name="name">as.account.move.new_date.etapa</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="as_fecha_prefactura" />
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="replace">
                    <field name="currency_id"
                                        groups="base.group_multi_currency"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="before">
                    <field name="as_move_type" invisible="True" />

                    <field name="as_descripcion" widget="section_and_note_text" force_save="1" />
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="before">
                    <field name="as_descripcion" optional="hide" />
                </xpath>
                <xpath expr="//page[@id='aml_tab']" position="after">
                    <page string="Orden de Compra" name="as_conditions_lines"
                        attrs="{'invisible': [('move_type', 'not in', ('out_invoice'))]}">
                        <group>
                            <field name="as_proposal_id" />
                            <field name="as_texto" />
                            <button name="boton_add" string="Agregar" type="object" class="btn-primary" />
                        </group>
                        <field name="as_conditions_lines" mode="tree">
                            <form>
                                <field name="name" />
                                <field name="as_valor" />
                            </form>
                            <tree string="Orden de Compra" editable="bottom">
                                <field name="name" />
                                <field name="as_valor" />
                            </tree>

                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_account_move_total_auxiliar" model="ir.ui.view">
        <field name="name">account_move_line_total</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_total']" position="after">
                <field name="as_price_total_aux" />
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                <field name="as_price_unit_aux" />
            </xpath>
        </field>
    </record>
    </data>
</odoo>