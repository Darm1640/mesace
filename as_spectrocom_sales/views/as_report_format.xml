<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <report id="as_action_sale_order" model="sale.order" string="Presupuesto / Orden" report_type="qweb-pdf"
      name="as_spectrocom_sales.as_pdf_nota_pedido" file="as_spectrocom_sales.as_pdf_nota_pedido" menu="True" print_report_name = "(object.as_template_id.name+' '+object.as_referencia+'.pdf')"/>

    <report id="as_action_sale_order_sst" model="sale.order" string="Presupuesto / Orden SST" report_type="qweb-pdf" name="as_spectrocom_sales.as_pdf_nota_pedido_sst" file="as_spectrocom_sales.as_pdf_nota_pedido_sst" menu="True" print_report_name = "(object.as_template_id.name+' '+object.as_referencia+'.pdf')"/>

    <report id="as_action_sale_order_bs" model="sale.order" string="Presupuesto / Orden Bs" report_type="qweb-pdf"
      name="as_spectrocom_sales.as_pdf_nota_pedido_bs" file="as_spectrocom_sales.as_pdf_nota_pedido_bs" menu="True"  print_report_name = "(object.as_template_id.name+' '+object.as_referencia+'.pdf')"/>

    <record id="as_report_invoice_windows_paperformat" model="report.paperformat">
      <field name="name">Presupuesto/Pedido de venta PDF only</field>
      <field name="default" eval="True" />
      <field name="format">Letter</field>
      <field name="page_height">0</field>
      <field name="page_width">0</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">58</field>
      <field name="margin_bottom">28</field>
      <field name="margin_left">7</field>
      <field name="margin_right">7</field>
      <field name="header_line" eval="False" />
      <field name="header_spacing">64</field>
      <field name="dpi">90</field>
      <field name="report_ids" eval="[(4, ref('as_spectrocom_sales.as_action_sale_order'))]" />

    </record>
    <record id="as_report_invoice_windows_paperformat_sst" model="report.paperformat">
      <field name="name">Presupuesto/Pedido de venta PDF SST</field>
      <field name="default" eval="True" />
      <field name="format">Letter</field>
      <field name="page_height">0</field>
      <field name="page_width">0</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">58</field>
      <field name="margin_bottom">28</field>
      <field name="margin_left">7</field>
      <field name="margin_right">7</field>
      <field name="header_line" eval="False" />
      <field name="header_spacing">64</field>
      <field name="dpi">90</field>
      <field name="report_ids" eval="[(4, ref('as_spectrocom_sales.as_action_sale_order_sst'))]" />

    </record>

    <record id="as_report_invoice_windows_paperformat_bs" model="report.paperformat">
      <field name="name">Presupuesto/Pedido de venta PDF Bs</field>
      <field name="default" eval="True" />
      <field name="format">Letter</field>
      <field name="page_height">0</field>
      <field name="page_width">0</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">58</field>
      <field name="margin_bottom">28</field>
      <field name="margin_left">7</field>
      <field name="margin_right">7</field>
      <field name="header_line" eval="False" />
      <field name="header_spacing">64</field>
      <field name="dpi">90</field>
      <field name="report_ids" eval="[(4, ref('as_spectrocom_sales.as_action_sale_order_bs'))]" />

    </record>
    <report id="sale.action_report_saleorder" string="Quotation / Order" model="sale.order" report_type="qweb-pdf"
      file="sale.report_saleorder" name="sale.report_saleorder"
      print_report_name="(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)"
      menu="False" />

    <report id="sale.action_report_pro_forma_invoice" string="PRO-FORMA Invoice" model="sale.order"
      report_type="qweb-pdf" groups="sale.group_proforma_sales" file="sale.report_saleorder_pro_forma"
      name="sale.report_saleorder_pro_forma" print_report_name="'PRO-FORMA - %s' % (object.name)" menu="False" />
