<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="name">as.stock.picking.form</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
        
            <xpath expr="//button[@name='button_validate']" position="after">
                    <button name="action_create_assets" type="object" string="Generar Activos"
                        class="oe_highlight" id="bid_confirm"  attrs="{'invisible': [('as_generate_assets', '!=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                      <field name="as_generate_assets" readonly="True" force_save="1"/>

            </xpath>
           
        </field>
    </record>
   <record model="ir.ui.view" id="as_stock_picking_form_view_5">
            <field name="name">as.stock.picking.form.2</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree" />
            <field name="arch" type="xml">

              
                <xpath expr="//field[@name='product_id']" position="after">
                      <field string="Catgoria Activo" name="as_asset_category_id" force_save="1" domain="[('type','=','purchase')]" context="{'default_type':'purchase'}"/>
                      <field  name="as_asset_sale" optional="hide"/>
                </xpath>
              
            </field>
        </record>
          <record id="action_update_cant2" model="ir.actions.server">
        <field name="name">Venta de activos fijos</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">if records:
            action = records.action_update_sale()
        </field>
    </record>
</odoo>

