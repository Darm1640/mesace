<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_report_ventas_sn_factura" model="ir.ui.view">
            <field name="name">Ventas sin Factura</field>
            <field name="model">as.report.resumen.ventas.sn.factura</field>
            <field name="arch" type="xml">
                <form string="Ventas sin Factura">
                    <group col="2">
                        <group>
                            <field name="fecha_inicial" />
                            <field name="fecha_final" />
                        </group>
                        <group>
                            <field name="nombre_cliente" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" />
                            
                        </group>
                    </group>
                    <footer>
                        <button name="export_xls" default_focus="1" string="Exportar a Excel" type="object"
                            class="oe_highlight" context="{'xls_export':1}" icon="fa-download" />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_ventas_sn_factura" model="ir.actions.act_window">
            <field name="name">Ventas sin Factura</field>
            <field name="res_model">as.report.resumen.ventas.sn.factura</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_report_ventas_sn_factura" />
            <field name="target">new</field>
        </record>
        
        <report 
        id="as_ventas_sn_factura_xlsx" 
        model="as.report.resumen.ventas.sn.factura" 
        string="Ventas sin Factura" 
        report_type="xlsx"
        name="as_bo_sales_reports.as_ventas_sn_factura_xlsx.xlsx"
        file="as_bo_sales_reports.as_ventas_sn_factura_xlsx.xlsx"
        attachment_use="False" />

        <menuitem id="as_rep_ventas_sn_factura" name="Reporte de Ventas sin Factura" action="action_ventas_sn_factura"
            parent="sale.menu_sale_report" sequence="105" groups="base.group_user" />
    </data>
</odoo>