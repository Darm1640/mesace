<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_informe_utilidad_form" model="ir.ui.view">
            <field name="name">Informe de Ventas y Utilidad</field>
            <field name="model">as.ventas.utilidad</field>
            <field name="arch" type="xml">
                <form string="Informe de Ventas y Utilidad">
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="as_almacen" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="as_productos" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="as_consolidado"/>
                        <field name="as_categ_levels"/>
                        <field name="as_fuente"/>
                    </group>
                    <footer>
                        <button name="export_xls" 
                            type="object" 
                            default_focus="1"
                            string="Exportar Excel" 
                            context="{'xls_export':1}"
                            icon="fa-print"
                            class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_informe_utilidad_action" model="ir.actions.act_window">
            <field name="name">Informe de Ventas y Utilidad</field>
            <field name="res_model">as.ventas.utilidad</field>         
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_informe_utilidad_form"/>
            <field name="target">new</field>
        </record>

         <report 
        id="as_informe_utilidad_report" 
        model="as.ventas.utilidad" 
        string="Informe de Ventas y Utilidad" 
        report_type="xlsx"
        name="as_bo_sales_reports.informe_utilidad.xlsx" 
        file="as_bo_sales_reports.informe_utilidad.xlsx"
        attachment_use="False" />
        <menuitem id="as_sales_utilidad_ventas" name="Informe de Ventas y Utilidad" action="as_informe_utilidad_action"
            parent="sale.menu_sale_report" sequence="25" groups="base.group_user" />
    </data>
</odoo>