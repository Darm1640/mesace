<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_report_resumen_cuentas_cobrar" model="ir.ui.view">
            <field name="name">Resumen Cuentas por Cobrar</field>
            <field name="model">as.report.resumen.cuentas.cobrar</field>
            <field name="arch" type="xml">
                <form string="Resumen Cuentas por Cobrar">
                    <group col="2">
                        <group>
                            <field name="fecha_inicial" />
                            <field name="fecha_final" />
                            <!-- <field name="as_ciudad" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" /> -->
                        </group>
                        <group>
                            <!-- <field name="as_almacen" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/> -->
                            <field name="nombre_cliente" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" />
                            
                        </group>
                    </group>
                    <footer>
                        <button name="export_xls" default_focus="1" string="Exportar a Excel" type="object"
                            class="oe_highlight" context="{'xls_export':1}" icon="fa-download" />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_resumen_cuentas_cobrar" model="ir.actions.act_window">
            <field name="name">Resumen Cuentas por Cobrar</field>
            <field name="res_model">as.report.resumen.cuentas.cobrar</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_report_resumen_cuentas_cobrar" />
            <field name="target">new</field>
        </record>
        
        <report id="as_resumen_cuentas_cobrar_xlsx" model="as.report.resumen.cuentas.cobrar" string="Resumen Cuentas por Cobrar" report_type="xlsx"
            name="as_bo_sales_reports.as_resumen_cuentas_cobrar_xlsx.xlsx"
            file="as_bo_sales_reports.as_resumen_cuentas_cobrar_xlsx.xlsx"
            attachment_use="False" />
        <menuitem id="as_resumen_ventas_de_gestion" name="Resumen Cuentas por Cobrar" action="action_resumen_cuentas_cobrar"
            parent="sale.menu_sale_report" sequence="101" groups="base.group_user" />
    </data>
</odoo>