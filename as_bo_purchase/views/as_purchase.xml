<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="as_purchase_order_foas_nucl" model="ir.ui.view">
            <field name="name">as.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase_delivery_invoice']/group/group[2]/field[@name='payment_term_id']"
                    position="attributes">
                    <attribute name="attrs">{'invisible': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <field name="as_stock_actual" groups="as_bo_purchase.group_cantidad_actual_product"/>
                </xpath>
                 <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                    <field name="as_procesar" groups="as_bo_purchase.group_purchase_line_selected"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>