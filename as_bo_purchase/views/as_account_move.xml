<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_view_move_form" model="ir.ui.view">
            <field name="name">as.account.move.utility.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="as_purchase_id" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
                
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>