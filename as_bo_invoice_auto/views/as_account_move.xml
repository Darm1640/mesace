<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_account_amove_view" model="ir.ui.view">
        <field name="name">as.account.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="as_sale_invoice_id" attrs="{'invisible': [('move_type', 'not in', ('out_invoice'))]}"/>
                <field name="as_sale_related_id" attrs="{'invisible': [('move_type', 'not in', ('out_invoice'))]}"/>
                <field name="as_sale_id" invisible="True"/>
                <label for="as_invoice_ids" attrs="{'invisible': [('move_type', 'not in', ('out_invoice'))]}"/>
                <div class="d-flex" attrs="{'invisible': [('move_type', 'not in', ('out_invoice'))]}">
                <field name="as_invoice_ids" widget="many2many_tags" />
                <button name="as_action_get_invoice" 
                        default_focus="1"
                        type="object" 
                        class="oe_highlight"
                        icon="fa-download" attrs="{'invisible': ['|',('state', '!=', 'draft'),('move_type', 'not in', ('out_invoice'))]}"/>
                </div>
            </xpath>
       
        </field>
    </record>


</odoo>