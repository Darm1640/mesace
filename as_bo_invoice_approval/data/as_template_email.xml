<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_template_account_email" model="mail.template">
            <field name="name">Factura Proveedor: Solicitud de Aprobación por monto</field>
            <field name="model_id" ref="account.model_account_move" />
            <field name="subject">Solicitud Aprobación Factura Proveedor: Ref(${object.name})</field>
            <field name="email_from">${object.company_id.partner_id.email}</field>
            <field name="email_to"></field>
            <field name="body_html" type="html">
                <div>
                    Estimado(s) usuario<br />
                    Tienes la factura <b><a
                        href='${website_url}/web#id=${object.id}&amp;action=840&amp;active_id=22&amp;model=account.move&amp;view_type=form&amp;cids=${object.company_id.id}&amp;menu_id=698'>${object.name}</a></b>
                    que espera tu aprobación.
                    <br />
                    <br />

                    Gracias,
                </div>
            </field>
        </record>
        <record id="as_template_approval_account_email" model="mail.template">
            <field name="name">Factura Proveedor: Aprobación por monto</field>
            <field name="model_id" ref="account.model_account_move" />
            <field name="subject">Aprobación Factura Proveedor: Ref(${object.name})</field>
            <field name="email_from">${object.company_id.partner_id.email}</field>
            <field name="email_to"></field>
            <field name="body_html" type="html">
                <div>
                    Estimado(s) usuario<br />
                   La factura <b><a
                        href='${website_url}/web#id=${object.id}&amp;action=840&amp;active_id=22&amp;model=account.move&amp;view_type=form&amp;cids=${object.company_id.id}&amp;menu_id=698'>${object.name}</a></b>
                    fue aprobada satisfactoriamente.
                    <br />
                    <br />

                    Gracias,
                </div>
            </field>
        </record>
    </data>
</odoo>