<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_product_template_form_view" model="ir.ui.view">
            <field name="name">as.product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">12</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <page name='general_information' position="after" >
                    <page name="costs" string="Costos por Almacen" group="stock.group_stock_manager">
                        <div colspan="12">
                            <field name="location_ids" context="{'template_id': id}" attrs="{'invisible': [('product_variant_count', '>', 1)]}"
                                widget="locationsHierarchyWidget" style="width: 100% !important"  />
                             <button name="action_updates_cost"
                            type="object"
                            string="Actualizar Costos"
                            context="{'template_id': id}"
                            class="btn btn-secondary pull-right" />
                             <button name="action_prepare_xlsx_balance"
                            type="object"
                            string="Export to XLSX"
                            context="{'template_id': id}"
                            class="btn btn-secondary pull-right"
                            />
                        </div>
                    </page>
                </page>
                
            </field>
        </record>
        

    </data>
</odoo>