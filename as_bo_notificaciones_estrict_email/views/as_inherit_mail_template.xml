<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_as_mail_template_inherit" model="ir.ui.view">
            <field name="name">as.mail.template.inheritform</field>
            <field name="model">mail.template</field>
            <field name="inherit_id" ref="mail.email_template_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='model_id']" position="after">
                    <field name="as_self_id" readonly="True" />
                </xpath>

            </field>
        </record>
        <record id="as_new_pestania_email_form" model="ir.ui.view">
            <field name="name">as.new.pestania.email.form</field>
            <field name="model">mail.template</field>
            <field name="inherit_id" ref="mail.email_template_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='dynamic_placeholder_generator']" position="attributes">
                    <attribute name="string">Generador Dinamico
                    </attribute>
                </xpath>
                <xpath expr="//page[@name='dynamic_placeholder_generator']" position="before">
                    <notebook string="WhatsApp">
                        <page name="body_email_whatsap" string="WhatsApp">
                            <field name="as_asunto" />
                            <field name="as_desde" />
                            <field name="as_mobile" />
                            <field name="as_mensaje_whatsapp_email" />
                            <!-- <button name="boton_send_whatsapp" string="Enviar" type="object" class="btn-primary" /> -->
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

    </data>
</odoo>