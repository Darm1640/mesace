<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_bo_notificaciones_view" model="ir.ui.view">
            <field name="name">as.bo.notificaciones.view</field>
            <field name="model">as.bo.notificaciones</field>
            <field name="arch" type="xml">
                <form string="Correos Electronicos Personalizados">
                    <sheet>
                        <div>
                            <group col="2" string="Informacion del correo electronico">
                                <field name="as_responsable" />
                                <field name="as_origen" />
                                <field name="as_destino" />
                                <field name="as_cc" />
                            </group>
                            

                        </div>
                        <notebook>
                            <page name="body_email" string="Descripcion">
                                <group col="1">
                                    <field name="as_asunto" />
                                    <field name="as_contenido" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="as_bo_notificaciones_tree" model="ir.ui.view">
            <field name="name">as.bo.notificaciones.tree</field>
            <field name="model">as.bo.notificaciones</field>
            <field name="arch" type="xml">
                <tree string="Informacion del correo electronico">
                    <field name="as_responsable" />
                    <field name="as_origen" />
                    <field name="as_destino" />
                </tree>
            </field>
        </record>

        <act_window id="as_bo_notificaciones_action" name="Plantillas de correos electronicos"
            res_model="as.bo.notificaciones" view_mode="tree,form" />

    </data>
</odoo>