<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_assets_account_excel" model="ir.ui.view">
            <field name="name">Reporte de SIAT</field>
            <field name="model">as.assets.report.excel</field>
            <field name="arch" type="xml">
                <form string="Reporte de SIAT">
                    <group col="2">
                        <group>
                            <field name="start_date" />
                            <field name="as_producto" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        </group>
                        <group>
                            <field name="end_date" />
                            <field name="as_lote" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                             
                        </group>
                        
                    </group>
                    <footer>
                        <button name="imprimir_excel" type="object" default_focus="1" string="Generar excel"
                            context="{'xlsx_export':1}" icon="fa-print" class="oe_highlight" />
                        or
                        <button string="Cancelar" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_action_assets_excel" model="ir.actions.act_window">
            <field name="name">Reporte de SIAT</field>
            <field name="res_model">as.assets.report.excel</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_assets_account_excel" />
            <field name="target">new</field>
        </record>

        <report id="reporte_siat_xlsx" model="as.assets.report.excel" string="Reporte de SIAT" report_type="xlsx"
            name="as_bo_assets.reporte_siat_xlsx.xlsx" file="as_bo_assets.reporte_siat_xlsx.xlsx"
            attachment_use="False" />

        <menuitem id="as_asstes_reporte_siat" name="Reporte de SIAT" action="as_action_assets_excel"
            parent="account.menu_finance_reports" sequence="10" groups="account.group_account_user" />
    </data>

</odoo>