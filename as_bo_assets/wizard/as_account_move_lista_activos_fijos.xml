<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_report_lista_activos_fijos" model="ir.ui.view">
            <field name="name">Lista activos fijos</field>
            <field name="model">lista.activos.fijos</field>
            <field name="arch" type="xml">
                <form string="Reporte de Lista de activos fijos">
                    <group col="4">
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="as_serie_lote_filter"/>
                    <field name="as_producto_filter" widget="many2many_tags"
                            options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" />
                    <field name="as_marca_filter"/>
                    <field name="as_categoria_filter"/>
                    </group>
                    <footer>
                        <button name="imprimir_salidas_inventario_pdf" string="Exportar a PDF" type="object" class="btn-primary"/>
                        <button name="export_xlsx" default_focus="1" string="Exportar a Excel" type="object"
                            class="oe_highlight" context="{'xlsx_export':1}" icon="fa-download" />
                        <button string="Cancelar" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_lista_activos_fijos_report" model="ir.actions.act_window">
            <field name="name">Lista activos fijos</field>
            <field name="res_model">lista.activos.fijos</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_report_lista_activos_fijos" />
            <field name="target">new</field>
        </record>

        <report 
        id="report_list_activ_fijos_xlsx" 
        model="lista.activos.fijos" 
        string="Reporte de Lista activos fijos"
        report_type="xlsx" 
        name="as_bo_assets.report_activos_fijos_report_xls.xlsx"
        file="as_bo_assets.report_activos_fijos_report_xls.xlsx" 
        attachment_use="False" />

        
        <menuitem 
        id="report_menu_valuation"
        name="Reporte de Lista activos fijos"
        sequence="9" 
        action="action_lista_activos_fijos_report" 
        parent="account.menu_finance_reports" 
        groups="account.group_account_user" />

    </data>
</odoo>