<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_product_template_inherit">
            <field name="name">product.template.form.inherit</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_account_income_id']" position="after">
                    <field name="as_assets" />
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_account_asset_inherit">
            <field name="name">account.asset.form.inherit</field>
            <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form" />
            <field name="model">account.asset.asset</field>
            <field name="arch" type="xml">
                <xpath expr="//page[2]" position="after">
                    <page name="as_activos_custodios" string="Custodios">
                        <group string="Custodios Activos Fijos">
                            <field name="as_custodies_lines">
                                <tree editable="bottom">
                                    <field name="as_product_activo_id" invisible="True" />
                                    <field name="as_date_start" />
                                    <field name="as_date_end" />
                                    <field name="as_employee_id" />
                                    <field name="as_job_id" />
                                    <field name="as_department_id" />
                                    <field name="as_location_id" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>
        <record model="ir.ui.view" id="as_product_template_view_tree">
            <field name="name">product.template.form.inherit</field>
            <field name="inherit_id" ref="account.product_template_view_tree" />
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="as_assets" />
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="as_product_template_view_tree2">
            <field name="name">product.template.form.inherit</field>
            <field name="inherit_id" ref="product.product_template_tree_view" />
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="as_assets" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>