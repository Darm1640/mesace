<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="as_viws_actualizador_cost" model="ir.ui.view">
        <field name="name">as.actualizador.costos.wizard</field>
        <field name="model">as.actualizador.costos.wizard</field>
        <field name="arch" type="xml">
            <form string="Compute Asset">
                <div>
                    <p>
                     Actualizador de Costos y Stock de Productos y Variantes
                    </p> 
                </div>
               
                <footer>
                    <button string="Actualizar Costos" name="actualizar_costos_productos" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
         </field>
    </record>

    <record id="as_action_asset_depreciation_confirmation_wizard" model="ir.actions.act_window">
        <field name="name">Actualizador de Costos/Stock</field>
        <field name="res_model">as.actualizador.costos.wizard</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="as_viws_actualizador_cost"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template" />
    </record>
     <record id="as_action_product_wizard" model="ir.actions.act_window">
        <field name="name">Actualizador de Costos/Stock</field>
        <field name="res_model">as.actualizador.costos.wizard</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="as_viws_actualizador_cost"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_product" />
    </record>

</odoo>
