<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="view_reporte_existencias_wiz" model="ir.ui.view">
        <field name="name">reporte de existencias</field>
        <field name="model">as.reporte.existencias</field>
        <field name="arch" type="xml">
            <form string="Reporte de Existencias">
                <group col="4">
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="as_almacen" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                    <field name="as_productos" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                    
                </group>
                <footer>
                    <!-- <button name="imprimir_kardex_productos_pdf" string="Exportar a PDF" type="object" class="btn-primary"/> -->
                    
                    <!-- <button name="kardex_productos_txt" string="Formato Facilito" type="object" class="btn-primary"/>     -->
                    <button name="imprimir_salidas_inventario_pdf" string="Exportar PDF" type="object" class="oe_highlight"/>
                        or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_reporte_existencias_qweb" model="ir.actions.act_window">
        <field name="name">reporte de existencias</field>
        <field name="res_model">as.reporte.existencias</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_reporte_existencias_wiz"/>
        <field name="target">new</field>
    </record>
    <menuitem
        id="as_reporte_existencias"
        name="Reporte de existencias"
        action="action_reporte_existencias_qweb"
        parent="stock.menu_warehouse_report"            
        sequence="50"
        groups="stock.group_stock_manager" />
</data>
</odoo>