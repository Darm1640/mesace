<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- VISTA COMO WIZARD -->
        <record id="as_product_import_view" model="ir.ui.view">
            <field name="name">Wizard de Importacion</field>
            <field name="model">as.importador.productos.inv</field>
            <field name="arch" type="xml">
                <form string="Wizard de Reporte">
                    <field name="product_template_ids" widget="many2many_tags" options="{'no_create':1}"
                        placeholder="Seleccionar Productos" invisible="context.get('exportador', False)" />
                    <group col="4">
                        <field name="as_fields_ids" widget="many2many_tags" placeholder="Seleccionar los campos"
                            options="{'no_create':1}" />
                        <field name="xls_name" invisible="1" />
                        <field name="xls_file" widget="binary" filename="xls_name" accept=".csv, .xls, .xlsx" />
                    </group>
                    <!-- <field name="as_mensaje" placeholder="datos no subidos o creados"/> -->

                    <footer>
                        <button name="exportar_archivo" icon="fa-print" default_focus="1" string="Exportar archivo"
                            context="{'xls_export':1}" type="object" />
                        <button name="importar_archivo" string="Importar archivo" type="object" />
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_view_importar_exportar_productos" name="Importador y Exportador de productos"
            res_model="as.importador.productos.inv" src_model="product.template" view_mode="form" view_type="form"
            multi="True" target="new" key2="client_action_multi"
            context="{'default_product_template_ids': active_ids, 'exportador':True}" />

        <report id="as_rentabilidad_compras_productsv" model="product.template"
            string="Rentabilidad de Compras / Productos" report_type="xlsx"
            name="as_bo_stock.archivo_producto.xlsx"
            file="as_bo_stock.archivo_producto.xlsx" attachment_use="False" menu="False" />

        <record id="as_action_importador_productosv" model="ir.actions.act_window">
            <field name="name">Importador de productos</field>
            <field name="res_model">as.importador.productos.inv</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_product_import_view" />
            <field name="target">new</field>
        </record>

        <menuitem action="as_action_importador_productosv" string="Importador De Productos" id="as_menu_product_import"
            parent="sale.sale_order_menu"  sequence="19" />


        <!-- VISTA COMO LOGS -->
        <record id="as_importador_productosv_tree" model="ir.ui.view">
            <field name="name">registro de importacion productos tree</field>
            <field name="model">as.importador.productos.inv</field>
            <field name="arch" type="xml">
                <tree create="false" import="false">
                    <field name="create_date" />
                </tree>
            </field>
        </record>

        <record id="as_importador_de_productos_log" model="ir.ui.view">
            <field name="name">registro de importacion form</field>
            <field name="model">as.importador.productos.inv</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="create_date" />
                            <field name="xls_file" />
                        </group>
                        <notebook>
                            <page string="Log Completo">
                                <field name="log_completo" />
                            </page>
                            <page string="Advertencias">
                                <field name="log_warnings" />
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="as_importador_productos_actionv" model="ir.actions.act_window">
            <field name="name">registro de importacion action</field>
            <field name="res_model">as.importador.productos.inv</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('as_importador_productosv_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('as_importador_de_productos_log')})]" />
        </record>

        <menuitem id="as_importador_productos_menuv" action="as_importador_productos_actionv"
            parent="sale.sale_order_menu" name="Log Importacion Productos" sequence="21" groups="stock.group_stock_manager" />


    </data>
</odoo>