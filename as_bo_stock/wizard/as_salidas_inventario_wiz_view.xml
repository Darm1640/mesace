<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_salidas_inventario_wiz_qweb" model="ir.ui.view">
            <field name="name">Salidas de Inventario</field>
            <field name="model">as.salidas.inventario.wiz</field>
            <field name="arch" type="xml">
                <form string="Salidas de Inventario">
                        <group col="4">
                         <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                        <field name="estado_salidas"/>
                        <field name="product" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                        <field name="location" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" invisible="1"/>
                        <field name="location_m2m" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" domain="[('usage','=','internal')]" string="UbicaciÃ³n"/>
                        </group>
                    <footer>                
                        <button name="export_xlsx" string="Exportar EXCEL" type="object" class="oe_highlight" context="{'xlsx_export':1}" 
                        icon="fa-download"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_salidas_inventario" model="ir.actions.act_window">
            <field name="name">Salidas de Inventario</field>
            <field name="res_model">as.salidas.inventario.wiz</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_salidas_inventario_wiz_qweb"/>
            <field name="target">new</field>
        </record>
        <report
        id="salidas_inventario_xlsx"
        model="as.salidas.inventario.wiz"
        string="salidas de inventario"
        report_type="xlsx"
        name="as_bo_stock.as_salidas_inventario_xls.xlsx"
        file="as_bo_stock.as_salidas_inventario_xls.xlsx"
        attachment_use="False" />


        <menuitem
        id="as_salidas_inventario"
        name="Salidas de Inventario"
        action="action_salidas_inventario"
        parent="stock.menu_warehouse_report"            
        sequence="50"
        groups="stock.group_stock_manager"/>
    </data>
</odoo>