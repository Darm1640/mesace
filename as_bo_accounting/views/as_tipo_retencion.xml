<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tipo de Retencion -->
        <!-- Vista Tree o vista lista de la interfaz -->
        <record id="as_tipo_retencion_tree" model="ir.ui.view">
            <field name="name">as.tipo.retencion.tree</field>
            <field name="model">as.tipo.retencion</field>
            <field name="arch" type="xml">
                <tree string="Tipo de Retencion">
                    <field name="name"/>
                    <field name="as_iue"/>
                    <field name="as_it"/>
                    <field name="as_iva"/>
                </tree>
            </field>
        </record>

        <!-- Vista form o vista del formulario de la interfaz -->
        <record id="as_tipo_retencion_form" model="ir.ui.view">
            <field name="name">as.tipo.retencion.form</field>
            <field name="model">as.tipo.retencion</field>
            <field name="arch" type="xml">
                <form string="Registro de Tipo de Retencion">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <notebook>
                            <page name='general' string="General">
                                <group col="4">
                                    <field name="as_iue"/>
                                    <field name="as_it"/>
                                    <field name="as_iva"/>
                                </group>
                            </page>
                            	<page name='contabilidad' string="Contabilidad">
	              
	                        <group col="4" name="izquierda">
								<field name="as_cuenta_iue" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
								<field name="as_cuenta_iva" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
								<field name="as_cuenta_it" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
	                        </group>
	                  
	                </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Accion de la interfaz -->
        <record id="as_tipo_retencion_action" model="ir.actions.act_window">
            <field name="name">Tipo de Retencion</field>
            <field name="res_model">as.tipo.retencion</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haga clic aqu√≠ para empezar a crear su primera retencion.
                </p>
            </field>
        </record>
        <menuitem action="as_tipo_retencion_action" id="menu_as_tipo_retencion_action" parent="account.account_account_menu" groups="account.group_account_user" sequence="5"/>
    </data>
</odoo>