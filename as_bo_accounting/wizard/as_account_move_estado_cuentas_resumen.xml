<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_resumen_cuentas" model="ir.ui.view">
            <field name="name">Reporte Resumen de Cuentas</field>
            <field name="model">as.resumen.cuentas</field>
            <field name="arch" type="xml">
                <form string="Reporte Resumen de Cuentas">
                    <group col="2">
                        <group>
                        <field name="start_date" />
                            <field name="as_cuentas_proveedor"  />
                        </group>
                        <group>
                        <field name="end_date" />
                            <field name="as_nombre_cliente" widget="many2many_tags"
                                options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" />
                        </group>
                    </group>
                    <footer>
                        <button name="export_xls" default_focus="1" string="Exportar a Excel" type="object"
                            class="oe_highlight" context="{'xls_export':1}" icon="fa-download" />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_resumen_de_cuentas" model="ir.actions.act_window">
            <field name="name">Reporte Resumen de Cuentas</field>
            <field name="res_model">as.resumen.cuentas</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_resumen_cuentas" />
            <field name="target">new</field>
        </record>

        <report id="as_resumen_cuentas_xlsx" model="as.resumen.cuentas"
            string="Reporte Resumen de Cuentas" report_type="xlsx"
            name="as_bo_accounting.as_resumen_cuentas_xlsx.xlsx"
            file="as_bo_accounting.as_resumen_cuentas_xlsx.xlsx" attachment_use="False" />

        <menuitem id="report_menu_resumen_cuentas" name="Reporte Resumen de Cuentas"
            parent="account.menu_finance_reports" sequence="152" action="action_resumen_de_cuentas" />
    </data>
</odoo>