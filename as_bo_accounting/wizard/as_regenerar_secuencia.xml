<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_regenerar_codigo_comprobantes_wiz" model="ir.ui.view">
            <field name="name">Regenerar numeracion comprobantes</field>
            <field name="model">as.regenerar.sequencia</field>
            <field name="arch" type="xml">
                <form string="Regenerar numeracion comprobantes">
                    <group col="4">
                        <label for="date_year"/>
                        <span>
                            <field name="date_month" placeholder="Elegir Mes" class="oe_inline"/>
                            <field name="date_year" placeholder="AÃ±o" class="oe_inline"/>
                        </span>
                        <field name="journal_id" options="{'no_create': True}"/>
                        <field name="as_secuencia" />
                        <field name="as_contable" />
                    </group>
                    <footer>
                        <button name="regenerar_sequencia" string="Regenerar numeracion" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_regenerar_numeracion_comprobante" model="ir.actions.act_window">
            <field name="name">Regenerar numeracion comprobantes</field>
            <field name="res_model">as.regenerar.sequencia</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_regenerar_codigo_comprobantes_wiz"/>
            <field name="target">new</field>
        </record>

        <menuitem
            name="Regenerar numeracion comprobantes"
            parent="account.menu_finance_entries"
            action="action_regenerar_numeracion_comprobante"
            id="menu_action_generar_numeracion_comprobante"
            sequence="90"/>
    </data>
</odoo>