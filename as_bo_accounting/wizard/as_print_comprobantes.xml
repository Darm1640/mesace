<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_printer_account_wiz" model="ir.ui.view">
            <field name="name">Imprimir masivamente Asientos</field>
            <field name="model">as.printer.account</field>
            <field name="arch" type="xml">
                <form string="Imprimir masivamente Asientos">
                    <group col="4">
                        <field name="as_start_date" />
                        <field name="as_end_date" />
                        <field name="as_journal_id" />
                        <!-- <field name="as_secuencia" /> -->
                    </group>
                    <footer>
                        <button name="printer_sequencia" string="Imprimir" type="object" class="oe_highlight" />
                        <button string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_printer_account" model="ir.actions.act_window">
            <field name="name">Imprimir masivamente Asientos</field>
            <field name="res_model">as.printer.account</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_printer_account_wiz" />
            <field name="target">new</field>
        </record>

        <menuitem parent="account.menu_finance_entries"
            action="action_printer_account" id="menu_action_printer_account" sequence="112"/>
    </data>
</odoo>