<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Motivo del Bono -->
        <record model="ir.ui.view" id="bonus_reason_form">
            <field name="name">Motivo del Bono</field>
            <field name="model">as.bonus.reason</field>
            <field name="arch" type="xml">
                <form string="Bonus Reason">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="bonus_reason_tree_view" model="ir.ui.view">
            <field name="name">Bonus Reason</field>
            <field name="model">as.bonus.reason</field>
            <field name="arch" type="xml">
                <tree string="Bonos y Descuentos">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bonus_reason">
            <field name="name">Reasons</field>
            <field name="res_model">as.bonus.reason</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Bonos y Descuentos -->
        <record model="ir.ui.view" id="employee_bonus_form">
            <field name="name">Bonos y Descuentos</field>
            <field name="model">as.employee.bonus</field>
            <field name="arch" type="xml">
                <form string="Bonos y Descuentos">
                    <header>
                        <button string="Confirmar" type="object" name="get_confirm" states="adraft" class="oe_highlight"
                            groups="hr.group_hr_user" />
                        <button string="Cancel" type="object" name="get_cancel" groups="hr.group_hr_user"
                            states="adraft" />
                        <button string="Aprobar por Departamento" type="object" name="get_apprv_dept_manager"
                            states="bconfirm" class="oe_highlight" />
                        <button string="Aprobar HR" type="object" name="get_apprv_hr_manager"
                            states="capproved_dept_manager" groups="hr.group_hr_user" class="oe_highlight" />
                        <button string="Rechazado" type="object" name="get_reject"
                            groups="hr.group_hr_user,employee_bonus.group_department_manager_for_bonus"
                            states="bconfirm,capproved_dept_manager" />
                        <button string="Volver a Borrador" type="object" name="get_reset"
                            groups="hr.group_hr_user,employee_bonus.group_department_manager_for_bonus"
                            states="reject,cancel,dapproved_hr_manager" />
                        <field name="state" widget="statusbar"
                            statusbar_visible="adraft,bconfirm,capproved_dept_manager,dapproved_hr_manager" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" />
                            </h1>
                            <label for="employee_id" class="oe_edit_only" />
                            <h1>
                                <field name="employee_id" placeholder="Employee's Name"
                                    attrs="{'readonly': [('state','!=','adraft')]}" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="department_id" attrs="{'readonly': [('state','!=','adraft')]}" />
                                <field name="job_id" attrs="{'readonly': [('state','!=','adraft')]}" />
                                <field name="reason_id" attrs="{'readonly': [('state','!=','adraft')]}" />
                                <field name="company_id" groups="base.group_multi_company" />
                                <field name="as_modalidad" />
                                <field name="as_date_start" attrs="{'invisible': [('as_modalidad','=','manual')]}" />
                                <field name="as_date_end" attrs="{'invisible': [('as_modalidad','=','manual')]}" />
                            </group>
                            <group>
                                <field name="manager_id" attrs="{'readonly': [('state','!=','adraft')]}" />
                                <field name="date" attrs="{'readonly': [('state','!=','adraft')]}" />
                                <field name="bonus_amount" widget="monetary"
                                    options="{'currency_field': 'currency_id'}" />
                                <field name="as_tipo" />
                                <field name="currency_id" groups="base.group_multi_currency" />
                                <field name="as_state_payroll" widget="badge"
                                    decoration-danger="as_state_payroll == 'draft'"
                                    decoration-success="as_state_payroll == 'done'"
                                    decoration-warning="as_state_payroll == 'asign'" />
                            </group>
                        </group>
                        <group string="Aprobación">
                            <group>
                                <field name="confirm_date" />
                                <field name="approved_date" />
                                <field name="approved_manager_date" />
                            </group>
                            <group>
                                <field name="confirm_uid" />
                                <field name="approved_by" />
                                <field name="approved_manager_uid" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="employee_bonus_tree_view" model="ir.ui.view">
            <field name="name">employee.bonus.tree</field>
            <field name="model">as.employee.bonus</field>
            <field name="arch" type="xml">
                <tree string="Bonos y Descuentos" decoration-info="as_tipo == 'manual'"
                    decoration-success="as_tipo == 'auto'">
                    <field name="name" />
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="manager_id" />
                    <field name="date" />
                    <field name="reason_id" />
                    <field name="as_date_start" />
                    <field name="as_date_end" />
                    <field name="currency_id" invisible="1" groups="base.group_multi_currency" />
                    <field name="bonus_amount" widget="monetary" options="{'currency_field': 'currency_id'}" />
                    <field name="company_id" groups="base.group_multi_company" />
                    <field name="as_state_payroll" widget="badge" decoration-danger="as_state_payroll == 'draft'"
                        decoration-success="as_state_payroll == 'done'"
                        decoration-warning="as_state_payroll == 'asign'" />
                    <field name="as_tipo" />
                    <field name="as_modalidad" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="view_employee_bonus_filter" model="ir.ui.view">
            <field name="name">employee.bonus.filter.select</field>
            <field name="model">as.employee.bonus</field>
            <field name="arch" type="xml">
                <search string="Search Bonos y Descuentos">
                    <field name="employee_id" />
                    <field name="department_id" string="Department" />
                    <field name="job_id" string="Job Position" />
                    <field name="manager_id" string="Manager" />
                    <field name="date" string="Date" />
                    <!--<field name="payroll_date"/>-->
                    <field name="reason_id" />
                    <field name="company_id" groups="base.group_multi_company" />
                    <field name="state" string="Status" />
                    <!--<separator/>
                    <filter string="Include In Payroll" domain="[('inculde_in_payroll','=',True)]" name = "inculde_in_payroll" />
                <separator/>-->
                    <group expand="0" string="Group By...">
                        <filter string="Employee" domain="[]" context="{'group_by':'employee_id'}" name="employee_id" />
                        <filter string="Department" domain="[]" context="{'group_by':'department_id'}"
                            name="department_id" />
                        <filter string="Manager" domain="[]" context="{'group_by':'manager_id'}" name="manager_id" />
                        <filter string="Job Position" domain="[]" context="{'group_by':'job_id'}" name="job_id" />
                        <filter string="Bonus Reason" domain="[]" context="{'group_by':'reason_id'}" name="reason_id" />
                        <filter string="Status" context="{'group_by': 'state'}" name="state" />
                        <filter string="Company" domain="[]" context="{'group_by':'company_id'}" name="company_id"
                            groups="base.group_multi_company" />
                    </group>
                </search>
            </field>
        </record>
        <record id="view_employee_bonus_pivot" model="ir.ui.view">
            <field name="name">view.employee.bonus.pivot</field>
            <field name="model">as.employee.bonus</field>
            <field name="arch" type="xml">
                <pivot string="Bonos y Descuentos">
                    <field name="employee_id" type="row" />
                    <field name="state" type="col" />
                </pivot>
            </field>
        </record>

        <record id="view_employee_bonus_graph" model="ir.ui.view">
            <field name="name">view.employee.bonus.graph</field>
            <field name="model">as.employee.bonus</field>
            <field name="arch" type="xml">
                <graph string="Bonos y Descuentos">
                    <field name="employee_id" />
                    <field name="state" />
                </graph>
            </field>
        </record>

        <record id="view_employee_bonus_calendar" model="ir.ui.view">
            <field name="name">view.employee.bonus.calendar</field>
            <field name="model">as.employee.bonus</field>
            <field name="arch" type="xml">
                <calendar string="Bonos y Descuentos" date_start="date">
                    <field name="employee_id" />
                    <field name="state" />
                </calendar>
            </field>
        </record>
        <record id='view_employee_bonus_kanban' model='ir.ui.view'>
            <field name="name">view.employee.bonus.kanban</field>
            <field name="model">as.employee.bonus</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="manager_id" />
                    <field name="date" />
                    <field name="reason_id" />
                    <field name="state" />
                    <field name="job_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <img t-att-src="kanban_image('hr.employee', 'image_128', record.employee_id.raw_value)"
                                        t-att-title="record.employee_id.value" t-att-alt="record.employee_id.value"
                                        class="oe_kanban_avatar o_image_24_cover mr4"
                                        options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}" />
                                    <span class="o_kanban_record_title">
                                        <strong>
                                            <t t-esc="record.employee_id.value" /></strong>
                                    </span>
                                </div>
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown"
                                        data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v" />
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit"
                                                class="dropdown-item">Edit</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete"
                                                class="dropdown-item">Delete</a></t>
                                        <ul class="oe_kanban_colorpicker" data-field="color" />
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <strong>
                                            <field name="employee_id" /></strong>
                                    </div>
                                    <div>
                                        <field name="bonus_amount" />
                                    </div>
                                    <div>
                                        <field name="department_id" />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_employee_bonus">
            <field name="name">Bonos de empleados</field>
            <field name="res_model">as.employee.bonus</field>
            <field name="view_mode">kanban,tree,calendar,form,pivot,graph</field>
        </record>

        <record model="ir.actions.act_window" id="action_bonus_department_approve">
            <field name="name">Bonos A Aprobar por Departamento</field>
            <field name="res_model">as.employee.bonus</field>
            <field name="view_mode">kanban,tree,calendar,form,pivot,graph</field>
            <field name="domain">[('state', '=', 'bconfirm')]</field>
        </record>

        <record model="ir.actions.act_window" id="action_bonus_officer">
            <field name="name">Bonos a aprobar por el oficial</field>
            <field name="res_model">as.employee.bonus</field>
            <field name="view_mode">kanban,tree,calendar,form,pivot,graph</field>
            <field name="domain">[('state', '=', 'capproved_dept_manager')]</field>
        </record>
        <!-- Motivo del Bono -->
        <record model="ir.ui.view" id="bonus_generador_form5">
            <field name="name">Generador de Bono y Descuento</field>
            <field name="model">as.generate.bonus.discount</field>
            <field name="arch" type="xml">
                <form string="Bonus Reason">
                    <header>
                        <!-- <button string="Crear" type="object" name="get_confirm" states="draft" class="oe_highlight" groups="hr.group_hr_user" /> -->
                        <button string="Generar Pago" type="object" name="as_get_bonus_payment" states="done" class="oe_highlight" groups="hr.group_hr_user" />
                        <button string="Autorizar Todo" type="object" name="as_get_autorizar" states="done" class="oe_highlight" groups="hr.group_hr_user" />
                        <button string="Crear Asignación" type="object" name="as_get_bonus_payroll" states="draft" class="oe_highlight" groups="hr.group_hr_user" />
                        <button name="as_get_report_pdf_in_close" string="IMPRIMIR PDF" type="object"
                            states="close" class="oe_highlight" />
                        <button name="as_get_report_excel_in_close" string="GENERAR EXCEL" type="object"
                            states="close" class="oe_highlight" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,close,done" />
                         <button string="Cancelar" type="object" name="as_get_bonus_cancel" class="oe_highlight" states="draft,close,done"/>
                    </header>
                    <sheet>
                      <div class="oe_button_box" name="button_box">
                      <button class="oe_stat_button" name="action_view_asiento" type="object" icon="fa-pencil-square-o">
                    <field string="Asiento" name="as_asiento_count" widget="statinfo" />
                </button>
                    </div>

                        <group>
                            <field name="name" />
                        </group>
                        <group col="4">
                            <field name="as_type" />
                            <field name="as_tipo" />
                            <field name="as_cantidad" />
                            <field name="as_date_start" />
                            <field name="as_action_pay" />
                             
                        </group>
                        <notebook>
                            <page string="Resumen Programación" name="nomina_aplicacion">
                                <header>
                                    <button string="Cargar Empleados" type="object" name="get_action_employee"
                                        states="draft" class="oe_highlight" groups="hr.group_hr_user" />
                                </header>
                                <field name="as_summary_ids">
                                    <tree editable="bottom" decoration-info="state == 'done'" decoration-success="state == 'close'" decoration-danger="state == 'draft'">
                                        <field name="as_pagar" />
                                        <field name="as_sequencia" />
                                        <field name="as_employee_id" />
                                        <field name="as_cantidad" />
                                        <field name="as_date_start" />
                                        <field name="as_date_end" />
                                        <field name="currency_id" />
                                        <field name="as_bonus_amount" />
                                        <field name="as_modalidad" />
                                        <field name="reason_id" />
                                       
                                        <field name="state" readonly="True" widget="badge"
                                            decoration-danger="state == 'draft'" decoration-info="state == 'done'" decoration-success="state == 'close'" force_save="1" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Aplicación en Nominas" name="nomina_aplicacion"
                                attrs="{'invisible': [('state','!=','done')]}">
                                <field name="as_bonus_discount_ids" attrs="{'invisible': [('state','!=','done')]}" />
                            </page>
                          <page string="Movimientos de Caja" name="nomina_caja">
                                <field name="as_caja_line_id"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>
        <record id="bonus_generator_tree_view" model="ir.ui.view">
            <field name="name">Generador de Bono y Descuento</field>
            <field name="model">as.generate.bonus.discount</field>
            <field name="arch" type="xml">
                <tree string="Bonos y Descuentos">
                    <field name="name" />
                    <field name="as_tipo" />
                    <field name="as_type" />
                    <field name="state" widget="badge" decoration-danger="state == 'draft'"
                        decoration-info="state == 'done'" decoration-success="state == 'close'"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bonus_reason_ids">
            <field name="name">Generador de Bonos y Descuentos</field>
            <field name="res_model">as.generate.bonus.discount</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="bonus_generador_form2">
            <field name="name">Resumen de Aplicación</field>
            <field name="model">as.bonus.discount.line</field>
            <field name="arch" type="xml">
                <form string="Bonus Reason">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="adraft,done" />
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="as_employee_id" />
                            <field name="as_cantidad" />
                            <field name="as_date_start" />
                            <field name="as_date_end" />
                            <field name="currency_id" />
                            <field name="as_bonus_amount" />
                            <field name="as_modalidad" />
                            <field name="reason_id" />
                            <field name="state" />

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="bonus_generator_tree_view2" model="ir.ui.view">
            <field name="name">Resumen de Aplicación</field>
            <field name="model">as.bonus.discount.line</field>
            <field name="arch" type="xml">
                <tree string="Bonos y Descuentos">
                    <field name="as_employee_id" />
                    <field name="as_cantidad" />
                    <field name="as_date_start" />
                    <field name="as_date_end" />
                    <field name="currency_id" />
                    <field name="as_bonus_amount" />
                    <field name="as_modalidad" />
                    <field name="reason_id" />
                    <field name="state" widget="badge" decoration-danger="state == 'draft'"
                        decoration-success="state == 'done'" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_bonus_reason_ids2">
            <field name="name">Resumen de Aplicación</field>
            <field name="res_model">as.bonus.discount.line</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_employee_bonus" parent="as_bo_hr.menu_bo_hr_payroll_master_data" name="Bono y Descuento" sequence="100" groups="base.group_user" />
        <menuitem id="menu_item_config_bonus" parent="menu_employee_bonus"  name="Configuración" sequence="0"
            groups="hr.group_hr_user" />
        <menuitem id="action_bonus_reason_id" name="Generador de Bonos y Descuentos Masivo"
            parent="menu_item_config_bonus" action="action_bonus_reason_ids" sequence="1" groups="hr.group_hr_user" />
        <menuitem id="menu_bonus_action" name="Motivo del Bono" parent="menu_item_config_bonus"
            action="action_bonus_reason" sequence="8" groups="hr.group_hr_user" />
        <menuitem id="menu_item_employee_bonus" parent="menu_employee_bonus" name="Bono y descuento" sequence="3"
            groups="base.group_user" />
        <menuitem id="menu_employee_bonus_action" name="Bonos y Descuentos" parent="menu_item_employee_bonus"
            action="action_view_employee_bonus" sequence="4" groups="base.group_user" />
        <menuitem id="menu_dept_bonus_action" parent="menu_item_employee_bonus" action="action_bonus_department_approve"
            sequence="5" />
        <menuitem id="menu_officer_bonus_action" parent="menu_item_employee_bonus" action="action_bonus_officer"
            sequence="6" groups="hr.group_hr_user" />

    </data>
</odoo>