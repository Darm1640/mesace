        <report id="as_bo_report_quincena" 
        model="as.generate.bonus.discount" 
        string="IMPRIMIR EXCEL" 
        report_type="xlsx"
        name="as_bo_hr_bonus_discount.as_pdf_report_excel.xlsx" 
        file="as_bo_hr_bonus_discount.as_pdf_report_excel.xlsx" 
        menu='False' />

        <report
        id="as_reporte_pdf_quincena" 
        string="reporte de quincena (PDF)"
        model="as.generate.bonus.discount"
        report_type="qweb-pdf"
        name="as_bo_hr_bonus_discount.as_reporte_pdf_quincenas"
        file="as_bo_hr_bonus_discount.as_reporte_pdf_quincenas"
        menu="False"
      />
      <record id="as_reporte_informe_cobranzas_pdf" model="report.paperformat">
        <field name="name">Informe de cobranzas</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">278</field>
        <field name="page_width">214</field>
        <field name="margin_top">4</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="orientation">Landscape</field>
        <field name="header_spacing">0</field>
        <field name="report_ids" eval="[(4, ref('as_reporte_pdf_quincena'))]"/>
      </record>

        <record id="emp_bonus_report" model="ir.actions.report">
            <field name="name">Imprimir Recibo</field>
            <field name="model">as.employee.bonus</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">as_bo_hr_bonus_discount.bonus_report_id</field>
            <field name="report_file">as_bo_hr_bonus_discount.bonus_report_id</field>
            <field name="binding_model_id" ref="as_bo_hr_bonus_discount.model_as_employee_bonus"/>
            <field name="binding_type">report</field>
        </record>

        <template id="bonus_report_id">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.html_container">
                  <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="text-center">
                             <h2><span t-field="doc.name"/> - <span t-field="doc.state"/></h2>
                        </div>
                        <table class="table">
                          <tr style="border: 2px solid black;">
                            <td><strong>Empleado</strong></td>
                            <td><span t-field="doc.employee_id.name"/></td>
                             <td><strong>Departmento</strong></td>
                            <td><span t-field="doc.department_id.name"/></td>
                          </tr>
                          <tr style="border: 2px solid black;">
                            <td><strong>Administrador</strong></td>
                            <td><span t-field="doc.manager_id.name"/></td>
                            <td><strong>Puesto de Trabajo </strong></td>
                            <td><span t-field="doc.job_id.name"/></td>
                          </tr>
                          <tr style="border: 2px solid black;"> 
                            <td><strong>Fecha</strong></td>
                            <td><span t-field="doc.date"/></td>
                            <td><strong>Motivo de bonificación o descuento</strong></td>
                            <td><span t-field="doc.reason_id.name"/></td>
                          </tr>
                          <tr style="border: 2px solid black;">
                            <td><strong>Motivo de bonificación o descuento</strong></td>
                            <td><span t-field="doc.reason_id.name"/></td>
                            <td><strong>Monto </strong></td>
                            <td><span t-field="doc.bonus_amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                          </tr>
                          <tr style="border: 2px solid black;">
                            <td><strong>Fecha desde</strong></td>
                            <td><span t-field="doc.as_date_start"/></td>
                            <td><strong>Fecha hasta </strong></td>
                            <td><span t-field="doc.as_date_end" /></td>
                          </tr>
                        </table>
                         <h3>Información General</h3>
                            <table class="table">
                               <tr style="border: 2px solid black;">
                                   <td><strong>Fecha confirmada</strong></td><td><span t-field="doc.confirm_date"/></td>
                                   <td><strong>Confirmado por</strong> </td><td><span t-field="doc.confirm_uid"/></td>
                               </tr>
                               <tr style="border: 2px solid black;">
                                   <td><strong>Departamento aprobado Fecha</strong></td><td> <span t-field="doc.approved_date"/></td>
                                   <td><strong>Departamento aprobado por</strong> </td><td> <span t-field="doc.approved_by"/></td>
                               </tr>
                                <tr style="border: 2px solid black;">
                                   <td><strong>Gerente aprobado Fecha</strong></td><td> <span t-field="doc.approved_manager_date"/></td>
                                   <td><strong>Gerente aprobada por</strong> </td><td> <span t-field="doc.approved_manager_uid"/></td>
                               </tr>
                            </table>
                            <div t-if="doc.notes">
                                 <strong>Notas :</strong><br/><span t-field="doc.notes"/>
                            </div>
                            <div class="row">
                                 <div class="col-6 text-left">
                                     <strong>Firma del departamento:____________________</strong>
                                 </div>
                                 <div class="col-6 text-right">
                                     <strong>Fecha:____________________</strong>
                                 </div>
                           </div>
                           <p></p>
                           <p></p>
                           <div class="row">
                                 <div class="col-6 text-left">
                                     <strong>Firma del oficial:____________________</strong>
                                 </div>
                                 <div class="col-6 text-right">
                                     <strong>Fecha:____________________</strong>
                                 </div>
                           </div>
                    </div>
                </t>
            </t>
          </t>
        </template>
        
    </data>
</odoo>
