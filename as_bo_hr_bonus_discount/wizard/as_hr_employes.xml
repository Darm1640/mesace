<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="as_viws_employee_carga" model="ir.ui.view">
        <field name="name">as.hr.employees</field>
        <field name="model">as.hr.employees</field>
        <field name="arch" type="xml">
            <form string="Cargar Empleados">
                <div>
                    <p>
                        Cargar Empleados
                    </p>
                    <field name="as_generador_id" invisible="True" />
                    <group>
                        <field name="reason_id" required="True" />
                    </group>
                    <group>
                        <field name="as_selector" />
                    </group>
                    <field name="as_employee_ids">
                        <tree editable="bottom">
                            <field name="as_action" />
                            <field name="as_employee_id" />
                        </tree>
                    </field>
                </div>

                <footer>
                    <button string="Cargar" name="as_get_cargar_empleados" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="as_action_employees_wizard" model="ir.actions.act_window">
        <field name="name">Cargar Empleados</field>
        <field name="res_model">as.hr.employees</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="as_viws_employee_carga" />
        <field name="target">new</field>
        <!-- <field name="binding_model_id" ref="as_bo_hr_bonus_discount.model_as_employee_bonus" /> -->
    </record>


</odoo>