<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_repair_historial_wiz_qweb" model="ir.ui.view">
            <field name="name">Historial de reparaciones</field>
            <field name="model">as.historial.reparaciones</field>
            <field name="arch" type="xml">
                <form string="Historial de reparaciones">
                        <group col="4">
                         <field name="start_date" required="1"/>
                        <field name="end_date" required="1"/>
                        <field name="as_estado" widget="selection"/>
                        <field name="as_series"/>
                        </group>
                    <footer>                
                        <!-- <button name="export_xlsx" string="Exportar a excel" type="object" class="oe_highlight" context="{'xlsx_export':1}" 
                        icon="fa-download"/> -->
                        <button name="imprimir_salidas_inventario_pdf" string="Exportar PDF" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_historial_reparaciones" model="ir.actions.act_window">
            <field name="name">Historial de reparaciones</field>
            <field name="res_model">as.historial.reparaciones</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_repair_historial_wiz_qweb"/>
            <field name="target">new</field>
        </record>
        <report
        id="as_historial_reparaciones_xlsx"
        model="as.historial.reparaciones"
        string="Historial de reparaciones"
        report_type="xlsx"
        name="as_spectrocom_repair.as_historial_reparaciones_xlsx.xlsx"
        file="as_spectrocom_repair.as_historial_reparaciones_xlsx.xlsx"
        attachment_use="False" />


        <menuitem
        id="as_historial_reparaciones"
        name="Historial de reparaciones"
        action="action_historial_reparaciones"
        parent="repair.repair_menu_reporting"            
        sequence="50"
        groups="stock.group_stock_user"/>

    </data>
</odoo>
