<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="model">repair.order</field>
        <field name="name">repair.order.edit.form</field>
        <field name="inherit_id" ref="repair.view_repair_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='notes']/field[@name='internal_notes']" position="replace">
                <field name="internal_notes" placeholder="Agregar Diagnostico"/>
            </xpath>
            <xpath expr="//page[@name='notes']/field[@name='quotation_notes']" position="replace">
                <field name="quotation_notes" placeholder="Agregar Reparacion"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="fecha_confirmar"/>
                <field name="fecha_finalizar"/>
            </xpath>
        </field>
    </record>
</odoo>