<?xml version="1.0" encoding="utf-8"?>
<odoo>  

     
<data>
        <record id="as_boton_informe_reparaciones" model="ir.ui.view">
            <field name="name">as.boton.informe.reparaciones</field>
            <field name="model">as.repair.order.sheet</field>
            <field name="inherit_id" ref="as_spectrocom_repair.as_repair_sheet_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="action_informe_reparaciones" string="GENERAR INFORME DE REPARACIONES" type="object" class="oe_highlight" states="confirmed,done"/>
                </xpath>
            </field>
        </record>
        <report
        id="as_informe_reparaciones"
        string="Orden de reparaciones"
        model="as.repair.order.sheet"
        report_type="qweb-pdf"
        name="as_spectrocom_repair.as_reporte_reparaciones_pdf"
        file="as_spectrocom_repair.as_reporte_reparaciones_pdf"
        menu="False"
      />
      <record id="as_orden_remision" model="report.paperformat">
        <field name="name">INFORME DE REPARACIONES</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">278</field>
        <field name="page_width">214</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="orientation">Portrait</field>
        <field name="header_spacing">0</field>
        <field name="report_ids" eval="[(4, ref('as_spectrocom_repair.as_informe_reparaciones'))]"/>
      </record> 
    </data>     
</odoo>