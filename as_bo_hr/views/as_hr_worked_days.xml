<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_worked_days_view" model="ir.ui.view">
            <field name="name">as.hr.worked.days.view</field>
            <field name="model">as.hr.worked.days</field>
            <field name="arch" type="xml">
                <form string="Sueldo minimo Nacional">
                    <sheet>
                        <div>

                            <group col="2" string="Período">
                            <field name="name" />
                            <field name="code" />
                            </group>
<p>Esta sección tiene relacion con las Reglas salariales</p>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="hr_worked_days_tree" model="ir.ui.view">
            <field name="name">as.hr.worked.days.tree</field>
            <field name="model">as.hr.worked.days</field>
            <field name="arch" type="xml">
                <!-- <tree string="Bancos" editable="bottom"> -->
                <tree string="Dias trabajados">
                   <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <act_window 
        id="hr_worked_action" 
        name="Codigos Dias Trabajados" 
        res_model="as.hr.worked.days" 
        view_mode="tree,form" />

     
    </data>
</odoo>