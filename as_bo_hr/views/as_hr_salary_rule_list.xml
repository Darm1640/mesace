<odoo>
    <data>
        <!-- Formulario cliente, campos adicionales -->
        <record id="as_hr_salary_rule_tree" model="ir.ui.view">
            <field name="name">hr.salary.rule.tree.tree</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_list" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="sequence"/>
                </xpath>
              
            </field>
        </record>        
        <record id="as_hr_salary_rule_tree2" model="ir.ui.view">
            <field name="name">hr.salary.rule.tree.tree</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form" />
            <field name="arch" type="xml">
              
                   <xpath expr="//field[@name='account_credit']" position="after">
                    <field name="as_account_debit_cost"/>
                    <field name="as_account_credit_cost"/>
                </xpath>
              
            </field>
        </record>
