<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_indicadores_previsionales_view" model="ir.ui.view">
            <field name="name">hr.indicadores.view</field>
            <field name="model">hr.indicadores</field>
            <field name="arch" type="xml">
                <form string="Indicadores Previsionales">
                    <sheet>
                        <div>
                            <field name="name" />

                            <group col="4" string="Período">
                                <field name="month" required="1" />
                                <field name="year" required="1" />
                                <field name="as_dias_habiles" required="1" />
                                <field name="as_dias_inhabiles" required="1" />
                            </group>
                            <notebook>
                                <page string="Parametros" name="parametros">
                                    <group col="2" string="Período">
                                        <field name="as_afp" required="1" />
                                        <field name="as_aumento_sueldo" required="1" />
                                    </group>
                                    <group col="2" string="Configuración Tributaria">
                                        <field name="as_UFV_inicial" required="1" />
                                        <field name="as_UFV_final" required="1" />
                                    </group>
                                    <group col="2" string="AFPS">
                                        <field name="as_value_afp_ids">
                                            <tree editable="bottom">
                                                <field name="as_desde" />
                                                <field name="as_hasta" />
                                                <field name="as_valor" />
                                            </tree>
                                        </field>
                                    </group>
                                    <group col="2" string="Bono de antiquedad">
                                        <field name="as_factor_3smn" required="1" />
                                        <field name="as_antiguedad_ids">
                                            <tree editable="bottom">
                                                <field name="as_desde" />
                                                <field name="as_hasta" />
                                                <field name="as_valor" />
                                            </tree>
                                        </field>
                                    </group>
                                    <group col="2" string="Horas extras y domingos">
                                        <field name="as_meses" required="1" />
                                        <field name="as_semanas" required="1" />
                                        <field name="as_horas_hombre" required="1" />
                                        <field name="as_horas_mujer" required="1" />
                                        <field name="as_dias_hombre" required="1" />
                                        <field name="as_dias_mujer" required="1" />
                                        <field name="as_semanas_meses" required="1" />
                                    </group>
                                </page>
                            </notebook>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="hr_indicadores_previsionales_tree" model="ir.ui.view">
            <field name="name">hr.indicadores.tree</field>
            <field name="model">hr.indicadores</field>
            <field name="arch" type="xml">
                <!-- <tree string="Bancos" editable="bottom"> -->
                <tree string="Indicadores">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <act_window id="hr_indicadores_previsionales_action" name="Indicadores" res_model="hr.indicadores"
            view_mode="tree,form" />



    </data>
</odoo>