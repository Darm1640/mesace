<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_planilla_sueldos_txt" model="ir.ui.view">
            <field name="name">TXT Banco sueldos y Salarios</field>
            <field name="model">as.payslip.txt</field>
            <field name="arch" type="xml">
                <form string="TXT Banco sueldos y Salarios">
                    <group col="2">
                        <field name="payslip_run_id" domain="[('state','!=', 'cancel')]"
                            options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" />
                        
                    </group>
                    <footer>
                        <button name="export_xls" type="object" default_focus="1" string="Generar TXT"
                            context="{'xls_export':1}" icon="fa-print" class="oe_highlight" />
                       

                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_action_planilla_sueldos_txt" model="ir.actions.act_window">
            <field name="name">TXT Banco sueldos y Salarios</field>
            <field name="res_model">as.payslip.txt</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_planilla_sueldos_txt" />
            <field name="target">new</field>
        </record>



    </data>
</odoo>