<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_planilla_ministerio" model="ir.ui.view">
            <field name="name">Planilla Ministerio</field>
            <field name="model">as.payslip.report.ministerio</field>
            <field name="arch" type="xml">
                <form string="Planilla Ministerio">
                    <group col="2">
                        <field name="payslip_run_id"
                            options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" />
                         <field name="as_lugar_trabajo"/>
                    </group>
                    <footer>
                        <button name="export_xls" type="object" default_focus="1" string="Generar en Excel"
                            context="{'xls_export':1}" icon="fa-print" class="oe_highlight" />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_action_reporte_ministerio" model="ir.actions.act_window">
            <field name="name">Planilla Ministerio</field>
            <field name="res_model">as.payslip.report.ministerio</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_planilla_ministerio" />
            <field name="target">new</field>
        </record>

        <report
        id="as_hr_planilla_ministerio" 
        model="hr.payslip.run" 
        string="Planilla Ministerio"
        report_type="xlsx" 
        name="as_bo_hr.planilla_ministerio.xlsx" 
        file="as_bo_hr.planilla_ministerio.xlsx"
        attachment_use="False" 
        menu="False" />


    </data>
</odoo>