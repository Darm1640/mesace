<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_planilla_pat" model="ir.ui.view">
            <field name="name">Generar Facturas Pago a Terceros</field>
            <field name="model">as.payment.terceros</field>
            <field name="arch" type="xml">
                <form string="Generar Facturas Pago a Terceros">
                    <group col="2">
                        <field name="payslip_run_id" domain="[('state','!=', 'cancel')]" readonly="True"
                               force_save="1"/>
                        <field name="company_id"/>
                        <field name="as_journal_id" domain="[('type','=', 'purchase')]"/>
                        <field name="journal_entry_id"/>
                        <field name="account_id"/>
                    </group>
                    <!-- <field name="as_line_ids"/> -->
                    <footer>
                        <!-- <button name="export_xls" type="object" default_focus="1" string="Generar en Excel"
                            context="{'xls_export':1}" icon="fa-print" class="oe_highlight" /> -->
                        <button name="action_generate" type="object" default_focus="1" string="Generar"
                                class="oe_highlight"/>

                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="as_action_planilla_pat" model="ir.actions.act_window">
            <field name="name">Generar Facturas Pago a Terceros</field>
            <field name="res_model">as.payment.terceros</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_planilla_pat"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>