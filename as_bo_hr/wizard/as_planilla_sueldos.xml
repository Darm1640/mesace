<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_planilla_sueldos" model="ir.ui.view">
            <field name="name">Planilla de Sueldos y Salarios</field>
            <field name="model">as.payslip.report</field>
            <field name="arch" type="xml">
                <form string="Planilla de Sueldos y Salarios">
                    <group col="2">
                        <field name="payslip_run_id" domain="[('state','!=', 'cancel')]"
                            options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" />
                         <field name="as_filtro_dep" />
                         <field name="as_name_afp" widget="many2many_tags"/>
                         <field name="as_state" />

                    </group>
                    <footer>
                        <button name="export_xls" type="object" default_focus="1" string="Generar en Excel"
                            context="{'xls_export':1}" icon="fa-print" class="oe_highlight" />
                        <button name="export_pdf" type="object" default_focus="1" string="Generar PDF"
                            icon="fa-print" class="oe_highlight" />

                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_action_planilla_sueldos" model="ir.actions.act_window">
            <field name="name">Planilla de Sueldos y Salarios</field>
            <field name="res_model">as.payslip.report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_planilla_sueldos" />
            <field name="target">new</field>
        </record>

        <report 
        id="as_hr_planilla_sueldos_report" 
        model="hr.payslip.run" 
        string="Planilla de Sueldos"
        report_type="xlsx" 
        name="as_bo_hr.planilla_sueldos.xlsx" 
        file="as_bo_hr.planilla_sueldos.xlsx"
        attachment_use="False" 
        menu="False" />


    </data>
</odoo>