<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_whatsapp_form" model="ir.ui.view">
        <field name="name">as.whatsapp.form</field>
        <field name="model">as.whatsapp</field>
        <field name="arch" type="xml">
            <form string="Send a WhatsApp Message">
                <header>
                    <button icon="fa-facebook" string="CA QR" type="object" class="oe_highlight" name="as_chatapi_qr"/>
                    <button icon="fa-facebook" string="CA Desconectar" type="object" class="oe_highlight" name="as_chatapi_logout"/>
                    <button icon="fa-facebook" string="CA Reiniciar" type="object" class="oe_highlight" name="as_chatapi_reset"/>
                    <button icon="fa-facebook" string="CA Mensajes" type="object" class="oe_highlight" name="as_chatapi_mensajes"/>
                    <button icon="fa-facebook" string="CA Verificar" type="object" class="oe_highlight" name="as_chatapi_status"/>
                    <button icon="fa-facebook" string="CA Prueba Envio" type="object" class="oe_highlight" name="as_chatapi_send_test_msg"/>

                    <button icon="fa-whatsapp" string="W QR" type="object" class="oe_highlight" name="as_wablas_QR"/>
                    <button icon="fa-whatsapp" string="W Reiniciar" type="object" class="oe_highlight" name="as_wablas_restart"/>
                    <button icon="fa-whatsapp" string="W Verificar" type="object" class="oe_highlight" name="as_wablas_verify"/>
                    <button icon="fa-whatsapp" string="W Prueba Envio" type="object" class="oe_highlight" name="as_wablas_send_test_msg"/>
                    <button icon="fa-whatsapp" string="W Prueba Envio Imagen" type="object" class="oe_highlight" name="as_wablas_send_test_imagen"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </header>
                <sheet>
                
                    <group>
                        <!-- <field name="qrImage" widget="image" /> -->
                        <field name="status" />
                        <field name="number_test" />
                        <field name="message_test" />
                        <field name="url_image" />
                        <field name="fecha_limite_inicial" />
                        <field name="fecha_limite_final" />
                    </group>
                    
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="as_whatsapp_form_action" model="ir.actions.act_window">
        <field name="name">Whatsapp</field>
        <field name="res_model">as.whatsapp</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="as_whatsapp_form"/>
    </record>
</odoo>
