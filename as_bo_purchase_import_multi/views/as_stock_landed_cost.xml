<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="as_view_stock_landed_multi_form" model="ir.ui.view">
            <field name="name">as.stock.landed.cost.form</field>
            <field name="model">stock.landed.cost</field>
            <field name="inherit_id" ref="as_bo_purchase_import.as_view_stock_landed_cost_form" />
            <field name="type">form</field>
            <field name="priority" eval="5" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='as_document_type']" position="after">
                    <field name="purchase_ids" options="{'no_create_edit': True}"
                        attrs="{'invisible': [('as_document_type','!=', 'multi')]}" widget="many2many_tags"
                        domain="[('state', '=', 'purchase'),('as_importacion', '=', True),('as_cost_id','=',False)]" /> 
                        <field name="purchase_est_ids" options="{'no_create_edit': True}"
                        attrs="{'invisible': [('as_document_type','!=', 'estimado')]}" widget="many2many_tags"
                        domain="[('state', '=', 'draft'),('as_importacion', '=', True)]" />
                
                </xpath>
                <xpath expr="//field[@name='amount_total_purchase']" position="attributes">
                    <attribute name="attrs">{'invisible': [('as_document_type','not in', ('compra','multi','estimado'))]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='amount_total_gasto']" position="attributes">
                    <attribute name="attrs">{'invisible': [('as_document_type','not in', ('compra','multi','estimado'))]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='as_valuation_summary_lines']/tree/field[@name='quantity']" position="after">
                    <field name="as_qty" />
                </xpath>
                 <xpath expr="//field[@name='cost_lines']/tree/field[@name='split_method']" position="after">
                    <field name="as_cost_price" />
                </xpath>
                  <xpath expr="//field[@name='cost_lines']/tree/field[@name='price_unit']" position="after">
                    <button name="cancel_fac_cost" type="object" icon="fa-window-close"/>
                </xpath>
                
                <xpath expr="//button[@name='compute_landed_cost']" position="after">
                    <button name="compute_landed_cost_prespupuesto" string="Estimar" attrs="{'invisible': [('as_document_type','!=', 'estimado')]}" type="object"/>
                </xpath>
            </field>
        </record>
        <record id="as_view_stock_landed_multi_form2" model="ir.ui.view">
            <field name="name">as.stock.landed.cost.lines</field>
            <field name="model">stock.landed.cost.lines</field>
            <field name="inherit_id" ref="as_bo_purchase_import.as_stock_landed_cost_lines" />
            <field name="type">form</field>
            <field name="priority" eval="5" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='as_tipo_factura']" position="after">
                    <field name="as_tipo_retencion" />
                </xpath>


            </field>
        </record> 

    </data>
</openerp>