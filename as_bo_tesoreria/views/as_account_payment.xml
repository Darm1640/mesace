<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_account_payments_form5" model="ir.ui.view">
            <field name="name">as.account.termas.account.term</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_type']" position="after">
                    <field name="as_is_anticipo"/>
                    <field name="payment_acquirer_id" options="{'no_create': True, 'no_open': True}" />
                    <field name="as_numero_documento"/> 
                </xpath>
            </field>
        </record>
    </data>
</odoo>