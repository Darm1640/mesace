<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <report id="as_bo_tesoreria_preliminar" 
      model="as.tesoreria" 
      string="Imprimir Factura" 
      report_type="xlsx"
      name="as_bo_tesoreria.as_pdf_report_de_caja_chica.xlsx" 
      file="as_bo_tesoreria.as_pdf_report_de_caja_chica.xlsx" 
      menu='False' />

      <report
      id="as_reporte_pdf_libro_caja_view" 
      string="reporte libro de caja (PDF)"
      model="as.tesoreria"
      report_type="qweb-pdf"
      name="as_bo_tesoreria.as_reporte_libro_caja"
      file="as_bo_tesoreria.as_reporte_libro_caja"
      menu="False"/>

      <record id="as_reporte_informe_libro_caja_pdf" model="report.paperformat">
        <field name="name">Libro de Caja</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">278</field>
        <field name="page_width">214</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="orientation">Portrait</field>
        <field name="header_spacing">43</field>
        <field name="report_ids" eval="[(4, ref('as_reporte_pdf_libro_caja_view'))]"/>
      </record>

      <report
      id="as_reporte_pdf_libro_caja_previa" 
      string="reporte libro de caja PREVIA"
      model="as.tesoreria"
      report_type="qweb-html"
      name="as_bo_tesoreria.as_reporte_libro_caja_previa"
      file="as_bo_tesoreria.as_reporte_libro_caja_previa"
      menu="False"/>
      
      <record id="as_reporte_informe_libro_caja_pdf_previa" model="report.paperformat">
        <field name="name">Libro de Caja vista previa</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">278</field>
        <field name="page_width">214</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">4</field>
        <field name="margin_right">4</field>
        <field name="orientation">Portrait</field>
        <field name="header_spacing">43</field>
        <field name="report_ids" eval="[(4, ref('as_reporte_pdf_libro_caja_previa'))]"/>
      </record>
    </data>
<!-- <field name="header_spacing">40</field> es el espacio de la cabecera, el cuerpo puede ir mas arriba se reduce el mespaciadoo -->
</odoo>