<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_view_partner_tesoreria_form" model="ir.ui.view">
            <field name="name">as.view.partner.property.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='accounting_entries']" position="inside">
                    <field name="property_account_supplier_id" />
                    <field name="property_account_anticipo_id" />
                    <field name="account_analytic_id" />
                    <field name="as_is_user" invisible="True" />
                    <field name="as_cuenta_prestamos" attrs="{'invisible': [('as_is_user','=', False)]}" />
                    <field name="as_cuenta_quincenas" attrs="{'invisible': [('as_is_user','=', False)]}" />
                    <field name="as_account_viatic" attrs="{'invisible': [('as_is_user','=', False)]}" />
                    <field name="as_account_diff_viatic" attrs="{'invisible': [('as_is_user','=', False)]}" />
                    <field name="as_cuenta_quinquenio" />
                    <field name="as_cuenta_dividendo" />
                    <field name="as_cuenta_employee" />
                    <field name="as_interes" />
                </xpath>
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="action_request_anticipo" type="object" class="oe_stat_button" icon="fa-money">
                        <field name="as_anticipo_count" widget="statinfo" string="Anticipos Cliente" />
                    </button>
                    <button name="action_request_antisupplier" type="object" class="oe_stat_button" icon="fa-money">
                        <field name="as_anticipo_supplier_count" widget="statinfo" string="Anticipos Proveedor" />
                    </button>

                </xpath>
            </field>
        </record>

    </data>
</odoo>