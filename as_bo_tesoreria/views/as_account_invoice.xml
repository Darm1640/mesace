    <record id="as_view_journal_button_tesoreria" model="ir.ui.view">
        <field name="name">account.move.tesoreria.tree</field>
        <field name="model">account.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="invoice_id" />
                <field name="sale_id" optional="hide" />
                <field name="as_liquidado_move" optional="hide" />
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="as_porcentaje" />
            </xpath>
            <xpath expr="//button[@name='button_draft']" position="after">
                <button name="as_action_invoice_regularizar" icon="fa-archive" string="Regularizar" type="object" class="btn-primary" />
                <button name="as_action_invoice_regularizar_move" icon="fa-archive" string="Regularizar con asiento" type="object" class="btn-primary" />
            </xpath>
            <xpath expr="//field[@name='invoice_incoterm_id']" position="after">
                <field name="as_is_gasto" />
            </xpath>
            <xpath expr="//button[@name='button_draft']" position="after">
                   <button name="as_button_draft" string="Volver Borrador" type="object" states="process,Regularizar"/>
                </xpath>
        </field>
    </record>
</odoo>