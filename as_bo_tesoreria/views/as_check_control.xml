<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_check_control_form" model="ir.ui.view">
            <field name="name">as.check.control.form</field>
            <field name="model">as.check.control</field>
            <field name="arch" type="xml">
                <form string="Company" attrs="{'edit': [('state', '!=', 'draft')]}">
                    <header>
                        <field name="state" widget="statusbar"/>
                         <button type="action" name="%(action_wiew_reason_check)d" states="draft,collected,protested,extended" string="Prorrogar" context="{'default_as_action': False}"  class="oe_highlight" />
                         <button type="action" name="%(action_wiew_reason_check)d" states="draft,collected,protested,extended" string="Protestar" context="{'default_as_action': 'protested'}"  class="oe_highlight" />
                         <button type="action" name="%(action_wiew_reason_check)d" states="draft,collected,protested,extended" string="Anular" context="{'default_as_action': 'cancel'}" class="oe_highlight" />
                    </header>
                    <sheet>
                    <widget name="web_ribbon" title="Anulado" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <widget name="web_ribbon" title="Cobrado" attrs="{'invisible': [('state', '!=', 'collected')]}" />
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" readonly="True" />
                            </h1>
                        </div>

                        <group col="4">
                            <field name="as_date" />
                            <field name="as_company_id" />
                            <field name="as_type_ckeck" />
                            <field name="as_user_id" />
                            <field name="as_num_ckeck" />
                            <field name="as_partner_id" />
                            <field name="as_date_expire" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="as_vat" />
                            <field name="as_account_bank_id" context="{'default_partner_id': as_partner_id}"/>
                            <field name="as_currency_id" />
                            <field name="as_account_origin" />
                            <field name="as_amount" />
                            <field name="as_reason" attrs="{'invisible': [('state', 'not in', ('cancel','protested'))]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_check_control_tree" model="ir.ui.view">
            <field name="name">as.check.control.tree</field>
            <field name="model">as.check.control</field>
            <field name="arch" type="xml">
                <tree string="Control de Cheques">
                    <field name="name" />
                    <field name="as_type_ckeck" />
                    <field name="as_vat" />
                    <field name="as_account_bank_id" />
                    <field name="as_num_ckeck" />
                    <field name="as_date_expire" />
                    <field name="as_amount" sum="total"/>
                    <field name="state" widget="badge" decoration-success="state == 'collected'" decoration-danger="state == 'protested' or state == 'extended' or state == 'cancel'" decoration-info="state == 'draft'" decoration-warning="state == 'in_wallet'"/>

                </tree>
            </field>
        </record>

        <record id="action_check_control_form" model="ir.actions.act_window">
            <field name="name">Control de Cheques</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">as.check.control</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>
        <!-- <menuitem action="action_check_control_form" id="menu_action_check_control_form"
            parent="account.menu_finance_receivables" /> -->

    </data>
</odoo>