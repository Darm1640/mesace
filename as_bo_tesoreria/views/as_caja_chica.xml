<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_caja_chica_tree" model="ir.ui.view">
            <field name="name">Pagos Caja Chica</field>
            <field name="model">as.caja.chica</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'confirm'" decoration-success="state == 'data'"
                    decoration-danger="state == 'cancel'" create="0" edit="1" delete="1">
                    <field name="name" />
                    <field name="as_partner_id" />
                    <field name="date" />
                    <field name="as_tipo_documento" />
                    <field name="as_tipo_factura" />
                    <field name="currency_id" />
                    <field name="as_amount" sum="Total" />
                    <field name="state" />
                    <field name="as_tesoreria_id" />
                    <field name="product_name_id" />
                    <field name="as_invoice_fiscal" />


                </tree>
            </field>
        </record>

        <record id="as_caja_chica_form" model="ir.ui.view">
            <field name="name">Pagos Caja Chica</field>
            <field name="model">as.caja.chica</field>
            <field name="arch" type="xml">
                <form edit="1">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="new,data,confirm,cancel" />
                    </header>
                    <sheet>
                        <h3>
                            <field name="name" readonly="True" />
                        </h3>
                        <group col="4">
                            <field name="date" />
                            <field name="as_partner_id" context="{'default_supplier': True,'default_customer': True}" />
                            <field name="as_tipo_documento" />
                            <field name="as_tipo_factura" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="product_name_id" />
                            <!-- <field name="currency_id" /> -->
                            <field name="as_numero_factura_compra"
                                attrs="{'required':[('as_tipo_documento','=','Factura')],'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />

                            <field name="as_numero_dui" attrs="{'required':[('as_tipo_documento','=','Factura')],'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="as_numero_autorizacion_compra"
                                attrs="{'required':[('as_tipo_documento','=','Factura')],'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="as_codigo_control_compra" required='False' attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="as_impuesto_especifico" force_Save="1"
                                attrs="{'required':[('as_tipo_documento','=','Factura')],'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="as_tipo_retencion"
                                attrs="{'required':[('as_tipo_documento','!=','Factura')]}" />
                            <field name="as_scan_qr" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" /> 
                            <field name="as_importe_ic"  attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}"/> 
                            <field name="as_importe_iehd" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" /> 
                            <field name="as_importe_ipj" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" /> 
                            <field name="as_tasas" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="as_interes"  attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}"/>
                            <!-- <field name="as_tasas"  /> -->
                            <field name="as_exentos" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="as_compras_gravadas" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="as_tipo_compra" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="as_amount" />
                            <field name="account_analytic_id"  />
                            <field name="as_descuento_tesoreria" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}"/>
                            <field name="as_gift_card" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <field name="as_placa"
                                attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')]}" />
                            <!-- <field name="as_tipo_de_compra"
                                attrs="{'readonly': [('state', '!=', 'draft')], 'required':[('as_tipo_documento','=','Factura')]}" /> -->
                            <field name="as_invoice_fiscal"  />
                            <field name="as_account_gasto_id" invisible="True"/>
                            <field name="as_tesoreria_id" invisible="True" />
                            <field name="as_monto_exento" invisible="True"/>

                        </group>

                        <field name="as_nota" />
                        <group>
                             <field name="as_invoice_id" readonly="1"/>
                            <field name="state" />
                            <field name="as_tax_ids"  widget="many2many_tags" attrs="{'invisible':[('as_tipo_documento','=','Prefactura/Recibo')],'required = False':[('as_tipo_documento','=','Prefactura/Recibo')]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="get_sale_process" string="Procesar" type="object" class="btn-primary" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="as_caja_chica_action_p" model="ir.actions.act_window">
            <field name="name">Pagos Caja Chica</field>
            <field name="res_model">as.caja.chica</field>
            <field name="view_mode">tree,form</field>
            <field name="target">new</field>
        </record>
        <menuitem id="as_caja_chica_menu" parent="account.menu_finance_receivables" name="Caja Chica" sequence="100"
            action="as_caja_chica_action_p" />
        
        
    </data>
</odoo>