<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_metodo_pago_tree" model="ir.ui.view">
            <field name="name">as.payment.acquirer.tree</field>
            <field name="model">as.payment.acquirer</field>
            <field name="arch" type="xml">
                <!-- <tree string="Métodos de pago" editable="bottom"> -->
                <tree string="Métodos de pago">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <!-- Vista form o vista del formulario de la interfaz -->
        <record id="as_metodo_pago_form" model="ir.ui.view">
            <field name="name">as.payment.acquirer.form</field>
            <field name="model">as.payment.acquirer</field>
            <field name="arch" type="xml">
                <form string="Registro de Métodos de pago">
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Nombre del método de pago"/>
                            <h1><field name="name" placeholder="Método de pago"/></h1>
                        </div>

                        <group col="4">
                            <group col="2">
                                <field name="tipo_documento"/>
                                <field name="as_is_credito"/>
                                <field name="as_is_debit"/>
                                <field name="as_is_anticipo"/>
                                <field name="as_porcentaje"/>
                            </group>
                            <group col="2">
                            </group>
                        </group>
                        <notebook>
                            <page string="Contabilidad">
                                <group>
                                    <group>
                                        <field name="account_id_ingreso"/>
                                    </group>
                                    <group>
                                        <field name="account_id_egreso"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Accion de la interfaz -->
        <record id="as_metodo_pago_action" model="ir.actions.act_window">
            <field name="name">Métodos de pago</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">as.payment.acquirer</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_metodo_pago_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haga clic acá para empezar a crear su primer método de pago.
                </p>
            </field>
        </record>

            <menuitem
            action='as_metodo_pago_action'
            id='payment.payment_acquirer_menu'
            parent="account.account_account_menu"
            sequence='10' />
    </data>
</odoo>