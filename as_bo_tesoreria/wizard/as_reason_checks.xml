<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_wiew_reason_checks" model="ir.ui.view">
            <field name="name">Motivos de Descarte de Cheques</field>
            <field name="model">as.reason.check.wiz</field>
            <field name="arch" type="xml">
                <form string="Motivos de Descarte de Cheques" create="false">
                
                    <group>
                        <field name="as_action" invisible="True"/>
                        <field name="as_action_view" readonly="True"/>

                        <field name="as_date_expire" attrs="{'invisible': [('as_action', '!=', False)]}"/>
                        <field name="as_control" invisible="True"/>
                        <field name="as_reason" />
                    
                    </group>

                <footer>
                <button string="Procesar" name="as_process_checks" type="object" class="btn-primary"/>
                </footer>
                </form>
            </field>
        </record>
    
        <record id="action_wiew_reason_check" model="ir.actions.act_window">
            <field name="name">Motivos de Descarte de Cheques</field>
            <field name="res_model">as.reason.check.wiz</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="as_wiew_reason_checks" />
            <field name="target">new</field>
        </record>

    </data>
</odoo>