<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="view_report_checks" model="ir.ui.view">
        <field name="name">Reporte de Cheques</field>
        <field name="model">as.report.checks</field>
        <field name="arch" type="xml">
            <form string="Kardex de productos por lotes">
                <group col="1">
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>                    

                <footer>
                    <button name="imprimir_excel" 
                        default_focus="1"
                        string="Exportar a Excel" 
                        type="object" 
                        class="oe_highlight"
                        context="{'xls_export':1}" 
                        icon="fa-download"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_checks" model="ir.actions.act_window">
        <field name="name">Reporte de Cheques</field>
        <field name="res_model">as.report.checks</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_report_checks"/>
        <field name="target">new</field>
    </record>

    <report
        id="as_report_checks"
        model="as.report.checks"
        string="libro de diferencias"
        report_type="xlsx"
        name="as_cl_account_treasury.as_report_checks.xlsx"
        file="as_cl_account_treasury.as_report_checks.xlsx"
        attachment_use="False" />


    <menuitem
        id="as_report_check"
        name="Reporte de Cheques"
        action="action_report_checks"
        parent="account.menu_finance_reports" sequence="10" groups="base.group_user"       
        />   
</data>
</odoo>
