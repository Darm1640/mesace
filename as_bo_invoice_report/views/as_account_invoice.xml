<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_id_view_agregar_campos" model="ir.ui.view">
        <field name="name">account.view_move_form.agregar.campos</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_user_id']" position="before">
                 <field name="as_oc" />
                 <field name="as_po" />
                 <field name="as_gr" />
                 <field name="as_ses" />
                 <field name="as_contrato" />
                 <field name="as_certificacion" />
                 <field name="as_referencia_prefactura" />
                 <field name="as_escritura_prefactura" />
            </xpath>
            <xpath expr="//button[@name='button_draft']" position="after">
                  <button name="as_action_invoice_preliminar" string="Factura preliminar" type="object" states="draft" class="btn-primary"/>
            </xpath>

        </field>
    </record>
</odoo>