<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report id="as_bo_invoice_report_qr" 
        model="account.move" 
        string="Imprimir Factura" 
        report_type="qweb-pdf"
        name="as_bo_invoice_report.report_invoice_print_debito" 
        file="as_bo_invoice_report.report_invoice_print_debito" 
        menu='True' />

        <record id="as_report_invoice_paperformat_factura_qr" model="report.paperformat">
        <field name="name">Factura Espectrocom</field>
        <field name="default" eval="True" />
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">55</field>
        <field name="margin_bottom">7</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">50</field>
        <field name="dpi">90</field>
        <field name="report_ids" eval="[(4, ref('as_bo_invoice_report_qr'))]" />
        </record>
        


        <report id="as_bo_invoice_report_preliminar" 
        model="account.move" 
        string="Imprimir Factura" 
        report_type="qweb-pdf"
        name="as_bo_invoice_report.report_invoice_preliminar" 
        file="as_bo_invoice_report.report_invoice_preliminar" 
        menu='False' />

        <record id="as_report_invoice_paperformat_factura_qr_preliminar" model="report.paperformat">
        <field name="name">Factura Espectrocom</field>
        <field name="default" eval="True" />
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">50</field>
        <field name="margin_bottom">7</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">45</field>
        <field name="dpi">90</field>
        <field name="report_ids" eval="[(4, ref('as_bo_invoice_report_preliminar'))]" />
        </record>
    </data>
<!-- <field name="header_spacing">40</field> es el espacio de la cabecera, el cuerpo puede ir mas arriba se reduce el mespaciadoo -->
</odoo>