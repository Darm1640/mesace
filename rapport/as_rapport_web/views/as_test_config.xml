<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="as_demo_config_form" model="ir.ui.view">
            <field name="name">Configuración de Demo</field>
            <field name="model">as.test.config</field>
            <field name="arch" type="xml">
                <form string="Configuración de Demo">
                    <sheet>
                        <group col="2">
                            <field name="name" />
                            <field name="as_ini_massage" />
                            <field name="as_save_massage" />
                        </group>
                      
                    </sheet>
                </form>
            </field>
        </record>

        <record id="as_demo_config_tree" model="ir.ui.view">
            <field name="name">Configuración de Demo</field>
            <field name="model">as.test.config</field>
            <field name="arch" type="xml">
                <tree string="Configuración de Demo">
                    <field name="name" />
                    <field name="as_ini_massage" />
                    <field name="as_save_massage" />
                </tree>
            </field>
        </record>
        <record id="as_survey_form_form_inherit" model="ir.ui.view">
            <field name="name">as.hr.employee.test.form</field>
            <field name="model">hr.employee.test</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="as_rapport_hr.as_evaluacion_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                        <button name="as_send_email" type="object" string="Enviar Correo"/>
                </xpath>

            </field>
        </record>


        <record model="ir.actions.act_window" id="action_evaluacion_config">
            <field name="name">Configuración de Demo</field>
            <field name="res_model">as.test.config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_demo_config_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haga clic aquí para empezar a crear su Configuración de Demo.
                </p>
            </field>
        </record>
        <menuitem id="as_survey_config" name="Configuración de Demo" action="action_evaluacion_config"
            parent="as_rapport_hr.as_ahorasoft_menu" sequence="10" />

    </data>
</odoo>