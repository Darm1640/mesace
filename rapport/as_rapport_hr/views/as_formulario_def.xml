<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="as_evaluacion_form" model="ir.ui.view">
            <field name="name">Evaluación de Talentos</field>
            <field name="model">hr.employee.test</field>
            <field name="arch" type="xml">
                <form string="Evaluación de Talentos">
                    <header>

                    </header>
                    <sheet>
                        <!-- <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" />
                            </h1>
                        </div> -->
                        <group col="4">
                            <field name="as_cliente" />
                            <field name="as_email" />
                            <field name="as_mobile" />
                            <field name="as_date" />
                            <field name="as_empresa" />
                            <!-- <field name="as_antiguedad_cargo" /> -->
                            <field name="as_cuadrante_id" invisible="True"/>
                        </group>
                        <br />
                        <notebook>
                            <page name="public" string="CALIFICACION">
                                <table style="margin: 0 auto; width:100%;font-size:20px !important" border="1"
                                    id="cambia_resultado">
                                    <tr
                                        style="background:#FF3374!important;color:#fff!important;border:3px solid #000000;text-align:center">
                                        <td>
                                            <p>COMPROMISO</p>
                                        </td>
                                        <td>
                                            <p>HABILIDADES</p>
                                        </td>
                                        <td>
                                            <p>ANTIGÜEDAD</p>
                                        </td>
                                        <td>
                                            <p>EDAD</p>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <p>
                                                <field name="as_compromiso" class="o_light_label" widget="radio" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_habilidades" widget="radio" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_antiguedad" widget="radio" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_edad" widget="radio" />
                                            </p>
                                        </td>
                                    </tr>

                                </table>
                            </page>
                            <page name="public" string="RESULTADOS">
                                <table
                                    style="margin: 0 auto; width:70%;font-size:20px !important;text-align:center;border:3px solid #000000"
                                    border="1" id="cambia_resultado">
                                    <tr style="background:#33C7FF!important;color:#fff!important;text-align:center;">
                                        <td>
                                            <p>RANGOS</p>
                                        </td>
                                        <td>
                                            <p>SIMULADOR</p>
                                        </td>
                                        <td>
                                            <p>CRITERIOS</p>
                                        </td>
                                        <td>
                                            <p>FACTOR %</p>
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            <p>
                                                <field name="as_rango_1" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_simulador_1" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                COMPROMISO
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_factor_1" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>
                                                <field name="as_rango_2" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_simulador_2" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                HABILIDADES
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_factor_2" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>
                                                <field name="as_rango_3" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_simulador_3" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                ANTIGUEDAD
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_factor_3" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>
                                                <field name="as_rango_4" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_simulador_4" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                EDAD

                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <field name="as_factor_4" readonly="True" force_save="1" />
                                            </p>
                                        </td>
                                    </tr>
                                    <tr style="border:3px solid #000000">
                                        <td>
                                            <b>
                                                <field name="as_total" readonly="True" force_save="1" />
                                            </b>
                                        </td>
                                        <td>
                                            <b>

                                            </b>
                                        </td>
                                        <td>
                                            <b>
                                                TOTAL
                                            </b>
                                        </td>
                                        <td>
                                            <b>
                                                <field name="as_total_factor" readonly="True" force_save="1" />
                                            </b>
                                        </td>
                                    </tr>

                                </table>
                                <br />
                                <div
                                    t-attf-class="o_goal_state #{record.current.raw_value == record.target_goal.raw_value+1 ? 'o_orange' : record.current.raw_value &gt; record.target_goal.raw_value ? 'o_red' : 'o_green'}">
                                    <b>
                                        Resultado:<br />
                                        <center>
                                            <field name="as_features_ids" readonly="True" force_save="1"
                                                widget="many2many_tags" options="{'color_field': 'as_code'}" />
                                        </center>
                                    </b>
                                </div>
                                <br />
                                <center>
                                    <img src="/as_rapport_hr/static/img/matriz.png" class="illustration_border"
                                        width="90%" />
                                </center>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="as_evaluacion_tree" model="ir.ui.view">
            <field name="name">Evaluación de Talentos</field>
            <field name="model">hr.employee.test</field>
            <field name="arch" type="xml">
                <tree string="Evaluación de Talentos">
                    <field name="as_cliente" />
                    <field name="as_date" />
                    <field name="as_total" />
                </tree>
            </field>
        </record>



        <record model="ir.actions.act_window" id="action_evaluacion_nucleo">
            <field name="name">Evaluación de Talentos</field>
            <field name="res_model">hr.employee.test</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_evaluacion_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haga clic aquí para empezar a crear su Evaluación de Talentos.
                </p>
            </field>
        </record>
        <menuitem id="as_ahorasoft_menu" name="Demo" sequence="90"
            web_icon="as_rapport_hr,static/description/demo.png" />
        <menuitem id="as_survey_cuadrante2_id2" name="Evaluación de Talentos" action="action_evaluacion_nucleo"
            parent="as_rapport_hr.as_ahorasoft_menu" sequence="10" />


        <menuitem id="as_survey_cuadrante2_id" name="Evaluación de Talentos" action="action_evaluacion_nucleo"
            parent="survey.survey_menu_user_inputs" sequence="10" />

    </data>
</odoo>