<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulario cliente, campos adicionales -->
        <record id="as_survey_form_form" model="ir.ui.view">
            <field name="name">as.survey.survey.form</field>
            <field name="model">survey.survey</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="survey.survey_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">
                    <field name="as_porcentaje" />
                    <field name="as_sequence" />
                    <field name="as_parent_id" />
                    <field name="as_range_age_id" />
                    <field name="as_range_old_id" />
                </xpath>
               
            </field>
        </record>
        <record id="as_survey_tree" model="ir.ui.view">
            <field name="name">as.survey.survey.form</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='title']" position="after">
                    <field name="id" />
                </xpath>
               
            </field>
        </record>
         <record id="as_survey_tree" model="ir.ui.view">
            <field name="name">as.survey.survey.form</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='title']" position="after">
                    <field name="id" />
                </xpath>
               
            </field>
        </record>
          <record id="as_res_partner_tree" model="ir.ui.view">
            <field name="name">as.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="id" />
                </xpath>
               
            </field>
        </record>
            <record id="as_res_partner_tree" model="ir.ui.view">
            <field name="name">as.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="id" />
                </xpath>
               
            </field>
        </record>
    </data>
</odoo>