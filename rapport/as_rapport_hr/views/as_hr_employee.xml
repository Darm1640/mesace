<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulario cliente, campos adicionales -->
        <record id="as_view_employee_form" model="ir.ui.view">
            <field name="name">as.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="as_subgerente_id" />
                    <field name="userp_id" />
                </xpath>
                <xpath expr="//field[@name='marital']" position="after">
                    <field name="as_date_start" />
                    <field name="as_anio" />
                    <field name="as_mes" />
                    <field name="as_dias" />

                </xpath>
                <xpath expr="//field[@name='birthday']" position="after">
                    <field name="as_edad" />
                </xpath>

                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="employer_id" />
                </xpath>
            </field>
        </record>
        <!--Hr Employee inherit search view-->
        <record id="as_hr_employee_view_search" model="ir.ui.view">
            <field name="name">hr.employee.search.view.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='group_manager']" position="after">
                    <filter string="Empleador" name="groupby_employer" context="{'group_by': 'employer_id'}" />
                </xpath>
            </field>
        </record>
     

    </data>
</odoo>