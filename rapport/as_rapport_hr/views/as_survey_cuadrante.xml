<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="as_survey_cuadrante_form" model="ir.ui.view">
            <field name="name">Cuadrante de Talentos</field>
            <field name="model">as.survey.cuadrante</field>
            <field name="arch" type="xml">
                <form string="Cuadrante de Talentos">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group col="4">
                        <field name="as_code"/>
                        <field name="as_range_start"/>
                        <field name="as_range_end"/>
                        <field name="as_features_ids"  widget="many2many_tags"/>
                        <field name="as_color_id"/>
                        </group>
                        
                   </sheet>
                </form>
            </field>
        </record>
  
        <record id="as_survey_cuadrante_tree" model="ir.ui.view">
            <field name="name">Cuadrante de Talentos</field>
            <field name="model">as.survey.cuadrante</field>
            <field name="arch" type="xml">
                <tree string="Cuadrante de Talentos">
                    <field name="name"/>
                     <field name="as_code"/>
                        <field name="as_range_start"/>
                        <field name="as_range_end"/>
                        <field name="as_features_ids"  widget="many2many_tags"/>
                        <field name="as_color_id"/>
                </tree>
            </field>
        </record>

        

        <record model="ir.actions.act_window" id="action_survey_cuadrante_nucleo">
            <field name="name">Cuadrante de Talentos</field>
            <field name="res_model">as.survey.cuadrante</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_survey_cuadrante_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haga clic aquÃ­ para empezar a crear su Cuadrante de Talentos.
                </p>
            </field>
        </record>
              <menuitem id="as_survey_cuadrante_id"
        name="Cuadrante de Talentos" 
        action="action_survey_cuadrante_nucleo"
       parent="survey.survey_menu_user_inputs"
        sequence="5"
        
        />

        <record id="as_caracteristicas_form" model="ir.ui.view">
            <field name="name">Caracteristicas en Encuestas</field>
            <field name="model">as.survey.features</field>
            <field name="arch" type="xml">
                <form string="Caracteristicas en Encuestas">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group col="4">
                        <field name="as_code"/>
                        </group>
                        
                   </sheet>
                </form>
            </field>
        </record>
  
        <record id="as_survey_caracteristicas_tree" model="ir.ui.view">
            <field name="name">Caracteristicas en Encuestas</field>
            <field name="model">as.survey.features</field>
            <field name="arch" type="xml">
                <tree string="Caracteristicas en Encuestas">
                    <field name="name"/>
                     <field name="as_code"/>
                </tree>
            </field>
        </record>

        

        <record model="ir.actions.act_window" id="action_caracteristicas_nucleo">
            <field name="name">Caracteristicas en Encuestas</field>
            <field name="res_model">as.survey.features</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_survey_caracteristicas_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haga clic aquÃ­ para empezar a crear su Caracteristicas en Encuestas.
                </p>
            </field>
        </record>
              <menuitem id="as_caracteristicas_id"
        name="Caracteristicas en Encuestas" 
        action="action_caracteristicas_nucleo"
       parent="survey.survey_menu_user_inputs"
        sequence="20"
        
        />
    </data>
</odoo>
