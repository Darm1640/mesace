<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="survey_employee_survey_form" model="ir.ui.view">
			<field name="name">as.survey.employer.form</field>
			<field name="model">as.survey.employer</field>
			<field name="arch" type="xml">
				<form string="employee_rules">
					<sheet>
						<div class="oe_title">
							<label for="name" string="Nombre Empleador" />
							<h1>
								<field name="name" />
							</h1>
						</div>
						<group col="4">
							<field name="rut" />
							<field name="address" />
							<field name="representante_name" />
							<field name="representante_rut" />
							<field name="comuna" />
							<field name="icon_image" widget="image" class="float-left oe_avatar" />
							<field name="icon_logo" widget="image" class="float-left oe_avatar" />

						</group>

					</sheet>
				</form>
			</field>
		</record>
		<record id="survey_employee_survey_tree" model="ir.ui.view">
			<field name="name">as.survey.employer.tree</field>
			<field name="model">as.survey.employer</field>
			<field name="arch" type="xml">
				<tree>
					<field name="id" />
					<field name="name" />

				</tree>
			</field>
		</record>
		<act_window id="survey_employeer_action" name="Empleadores" res_model="as.survey.employer"
			view_mode="tree,form" />

		<menuitem id="survey_employee_rules_menu" parent="survey.survey_menu_user_inputs"
			action="survey_employeer_action" sequence="2" />
	</data>
</odoo>