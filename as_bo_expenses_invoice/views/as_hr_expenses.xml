<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_purchase_order_foas_nucl" model="ir.ui.view">
            <field name="name">as.hr.expense.form</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_submit_expenses']" position="after">
                    <button name="action_create_invoice" string="Crear Factura" type="object" class="btn-primary"
                        attrs="{'invisible': [('as_invoice_id','!=',False)]}" />
                </xpath>
                <xpath expr="//field[@name='total_amount']" position="before">
                    <field name="as_descuento_hr" />
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="as_invoice_id" readonly="True" force_save="1" />
                    <field name="as_es_fiscal" />
                </xpath>
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,reported,approved,refused</attribute>
                </xpath>
                <!-- <xpath expr="//button[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,reported,approved,refused</attribute>
                </xpath> -->
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Libro de Compras" name="book_purchase">
                            <group>
                                <group>
                                    <field name="as_tipo_factura" options="{'no_open': True, 'no_create': True}"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                    <field name="as_tipo_documento" widget="radio" options="{'horizontal': True}"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}" />
                                    <field name="as_supplier_costo" />
                                    <field name="as_nit" />
                                    <field name="as_razon_social" />
                                    <field name="as_journal_id" />
                                    <field name="as_importe_ic" />
                                    <field name="as_importe_iehd" />
                                    <field name="as_importe_ipj" />
                                    <field name="as_tasas" />
                                    <field name="as_exentos" />

                                </group>
                                <group>
                                    <field name="as_numero_factura_compra" />
                                    <field name="as_numero_dui" />
                                    <field name="as_tipo_retencion" />
                                    <field name="as_codigo_control_compra" />
                                    <field name="as_numero_autorizacion_compra" />
                                    <field name="as_monto_exento" />
                                    <field name="as_impuesto_especifico"
                                        attrs="{'readonly': [('state', '!=', 'draft')], 'required':[('as_tipo_documento','=','Factura')]}" />
                                    <!-- <field name="as_tipo_de_compra"
                                    attrs="{'readonly': [('state', '!=', 'draft')], 'required':[('as_tipo_documento','=','Factura')]}" /> -->
                                    <field name="as_tipo_compra" widget="many2one_tags" />
                                    <field name="as_scan_qr" />
                                    <field name="as_compras_gravadas" />
                                    <field name="as_gift_card" />
                                    <field name="as_placa" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </xpath>

            </field>
        </record>
        <record id="as_purchase_order_foas_nucl2" model="ir.ui.view">
            <field name="name">as.hr.expense.sheet.form</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">draft,submit,approve,post</attribute>
                </xpath>
                <xpath expr="//button[@name='action_register_payment']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


            </field>
        </record>
    </data>
</odoo>