<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="as_pdf_salidas_inventario">
            <t t-call="web.html_container">
              
                    <t t-name= "web.external_layout_header" >
                        <div class="header">
                            <style type ="text/css" >
                                .header {
                                    margin: 0px;
                                    padding: 0px;
                                }
                                .columnas{
                                    font-size:10pt;
                                    font-weight:bold;
                                    border-collapse:collapse;
                                    border-bottom:solid;
                                    border-top:solid;
                                    border-width:0.5pt
                                }
                            </style>
                            <div>
                                <table width="100%">
                                    <tr>
                                        <td style="width:100%; text-align:left; vertical-align:middle"><h1><b>SALIDAS DE INVENTARIO</b></h1></td>
                                    </tr>
                                </table>
                                <table width="100%">
                                    <tr>
                                        <td class="sin_color_sin_borde" style="width:40%; text-align:left"><b>Fecha Impreso: </b><span t-esc="fecha_actual"/></td>
                                        <td class="sin_color_sin_borde" style="width:30%; text-align:right"><b>Fecha Inicial: </b><span t-esc="fecha_inicial"/></td>
                                        <td class="sin_color_sin_borde" style="width:30%; text-align:right"><b>Fecha Final: </b><span t-esc="fecha_final"/></td>
                                    </tr>
                                </table>
                                <table class="columnas" width="100%">
                                    <tr>
                                        <td style="width:7%; text-align:center; vertical-align:middle"><b>Fecha</b></td>
                                        <td style="width:10%; text-align:center; vertical-align:middle"><b>Nota Salida</b></td>
                                        <td style="width:8%; text-align:center; vertical-align:middle"><b>Nota Venta</b></td>
                                        <td style="width:8%; text-align:center; vertical-align:middle"><b>Nro Factura</b></td>
                                        <td style="width:12%; text-align:center; vertical-align:middle"><b>Cliente</b></td>
                                        <td style="width:25%; text-align:center; vertical-align:middle"><b>Producto</b></td>
                                        <td style="width:5%; text-align:center; vertical-align:middle"><b>Cantidad</b></td>
                                        <td style="width:10%; text-align:center; vertical-align:middle"><b>Costo</b></td>
                                        <td style="width:10%; text-align:center; vertical-align:middle"><b>Precio de venta</b></td>
                                        <td style="width:10%; text-align:center; vertical-align:middle"><b>Total</b></td>
                                        <td style="width:10%; text-align:center; vertical-align:middle"><b>Categoria Producto</b></td>
                                        <td style="width:8%; text-align:center; vertical-align:middle"><b>Estado</b></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                    <t t-name="web.external_layout_footer">
                        <div class="footer">
                            <small>
                                <span>Pagina</span>
                                <span class="page" />
                                de
                                <span class="topage" />
                            </small>
                        </div>
                    </t>
                    <t t-call="web.internal_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            <style type ="text/css" >
                                .informacion_cabecera{margin-right:auto}
                                .sin_color{margin-right:auto;border-collapse:collapse;border-style:solid;border-width:1pt}
                                .sin_color_letra_menor{font-size:11px;margin-right:auto;border-collapse:collapse;border-style:solid;border-width:1pt}
                                .sin_color_sin_borde{font-size:12px;margin-right:auto;}
                                tr.border_bottom td {border-bottom:0.5pt solid #cccccc;}
                                .page {margin: 0px;padding: 0px;}
                                .totales{
                                    font-size:10pt;
                                    font-weight:bold;
                                    border-collapse:collapse;
                                    border-bottom:solid;
                                    border-top:solid;
                                    border-width:1pt
                                }
                            </style>
                            <div >
                                <table t-foreach="lista_salidas_inventarios" t-as="movimientos" width="100%">
                                    <tr class="border_bottom">
                                        <td style="width:7%; text-align:center"><t t-esc="movimientos['fecha']"/></td>
                                        <td style="width:10%; text-align:left"><t t-esc="movimientos['nota_ingreso']"/></td>
                                        <td style="width:8%; text-align:left"><t t-esc="movimientos['nota_venta']"/></td>
                                        <td style="width:8%; text-align:left"><t t-esc="movimientos['nro_factura']"/></td>
                                        <td style="width:12%; text-align:left"><t t-esc="movimientos['cliente']"/></td>
                                        <td style="width:25%; text-align:left"><t t-esc="movimientos['producto']"/></td>
                                        <td style="width:5%; text-align:right"><t t-esc="'{0:,.2f}'.format(movimientos['cantidad'])"/></td>
                                        <td style="width:5%; text-align:right"><t t-esc="'{0:,.2f}'.format(movimientos['precio_de_venta'])"/></td>
                                        <td style="width:5%; text-align:right"><t t-esc="'{0:,.2f}'.format(movimientos['precio_unitario'])"/></td>
                                        <td style="width:10%; text-align:right"><t t-esc="'{0:,.2f}'.format(movimientos['total'])"/></td>
                                        <td style="width:10%; text-align:right"><t t-esc="movimientos['categoria_producto']"/></td>
                                        <td style="width:8%; text-align:right"><t t-esc="movimientos['estado']"/></td>
                                    </tr>
                                </table>
                                <table class="totales" width="100%">
                                    <tr>
                                        <td style="width:62%; text-align:center; vertical-align:middle" colspan="5"><b>TOTALES</b></td>
                                        <td style="width:5%; text-align:right; vertical-align:middle"><b><span t-esc="'{0:,.2f}'.format(float(total_cantidad))"/></b></td>
                                        <td style="width:5%; text-align:center; vertical-align:middle"><b></b></td>
                                        <td style="width:10%; text-align:right; vertical-align:middle"><b><span t-esc="'{0:,.2f}'.format(gran_total)"/></b></td>
                                        <td style="width:28%; text-align:center; vertical-align:middle" colspan="3"><b></b></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
        </template>
    </data>
</odoo>
