<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_taxes_pdv_tree1" model="ir.ui.view">
            <field name="name">Puntos de Venta</field>
            <field name="model">as.siat.punto.venta</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="as_code" />
                    <field name="as_cuis" />
                    <field name="as_cufd" />
                    <field name="as_branch_office" />
                    <field name="as_type" />
                </tree>
            </field>
        </record>

        <record id="as_taxes_pdv_form" model="ir.ui.view">
            <field name="name">Puntos de Venta</field>
            <field name="model">as.siat.punto.venta</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="as_request_point_sale_close" string="Cerrar PDV" type="object" class="btn-primary" />
                    </header>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="as_branch_office" />
                            <field name="active" readonly="True" />
                            <field name="as_code" />
                            <field name="as_cuis" />
                            <field name="as_cufd" />
                            <field name="as_type" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="as_taxes_pdv_action" model="ir.actions.act_window">
            <field name="name">Puntos de Venta</field>
            <field name="res_model">as.siat.punto.venta</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_taxes_pdv_tree1" />
        </record>
        <menuitem id="as_taxes_pdv_menu" action="as_taxes_pdv_action" parent="as_bo_invoice_client.as_invoice_bolivia_menu" name="Puntos de Venta" sequence="6" groups="account.group_account_manager"/>       

        <record id="as_taxes_cufd_tree" model="ir.ui.view">
            <field name="name">Codigo Unico Facturación Diario</field>
            <field name="model">as.siat.cufd</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="as_expire_date" />
                    <field name="as_cufd_value" />
                    <field name="as_branch_office" />
                    <field name="as_pdv_id" />
                    <field name="as_control_code" />
                    <field name="as_address" />
                    <field name="active" />
                </tree>
            </field>
        </record>

        <record id="as_taxes_cufd_form" model="ir.ui.view">
            <field name="name">Codigo Unico Facturación Diario</field>
            <field name="model">as.siat.cufd</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="as_expire_date" />
                            <field name="as_cufd_value" />
                            <field name="as_control_code" />
                            <field name="as_branch_office" />
                            <field name="as_pdv_id" />
                            <field name="as_address" />
                            <field name="active" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="as_taxes_cufd_action" model="ir.actions.act_window">
            <field name="name">Codigo Unico Facturación Diario</field>
            <field name="res_model">as.siat.cufd</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_taxes_cufd_tree" />
        </record>



    </data>
</odoo>