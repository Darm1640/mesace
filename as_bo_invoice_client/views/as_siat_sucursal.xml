<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_branch_office_tree" model="ir.ui.view">
            <field name="name">Sucursales Sistema</field>
            <field name="model">as.siat.sucursal</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="as_system_id" />
                    <field name="as_office_number" />
                    <field name="as_cuis" />
                    <field name="as_pdv_ids" />
                </tree>
            </field>
        </record>

        <record id="as_branch_office_form" model="ir.ui.view">
            <field name="name">Sucursales Sistema</field>
            <field name="model">as.siat.sucursal</field>
            <field name="arch" type="xml">
                <form>
                <header>
                        <button name="as_request_point_sale" string="Solicitar PDV" type="object" class="btn-primary" />
                        <button name="as_request_cuis_sale" string="Solicitar CUIS" type="object" class="btn-primary" />
                        
                        <button name="as_request_cufd" string="Solicitud de CUFD" type="object" class="btn-primary" />
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="as_system_id" />
                            <field name="as_office_number" />
                            <field name="as_cuis" />
                            <field name="as_type" />

                        </group>
                      <notebook>
                            <page name="pdv" string="Puntos de Venta">
                            <field name="as_pdv_ids" />
                              
                            </page>
                              <page name="cufd" string="CUFD">
                            <field name="as_cufd" />
                              
                            </page>
                      </notebook>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="as_branch_office_action" model="ir.actions.act_window">
            <field name="name">Sucursales Sistema</field>
            <field name="res_model">as.siat.sucursal</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_branch_office_tree" />
        </record>

        <menuitem id="as_branch_office_menu" action="as_branch_office_action"
            parent="as_bo_invoice_client.as_invoice_bolivia_menu" name="Sucursales Sistema" sequence="5"
            groups="account.group_account_manager" />

    </data>
</odoo>