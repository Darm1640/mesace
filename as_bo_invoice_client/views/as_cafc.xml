<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_CAFC_tree" model="ir.ui.view">
            <field name="name">CAFC</field>
            <field name="model">as.cafc</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="as_date_start" />
                    <field name="as_date_end" />
                    <field name="as_actividad" />
                    <field name="as_inicio"  />
                    <field name="as_fin" />
                </tree>
            </field>
        </record>
        <record id="as_CAFC_form" model="ir.ui.view">
            <field name="name">CAFC</field>
            <field name="model">as.cafc</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="as_date_start" />
                            <field name="as_date_end" />
                            <field name="as_actividad" />
                            <field name="as_inicio"  />
                            <field name="as_fin" />
                            <field name="as_proximo" />


                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="as_CAFC_action" model="ir.actions.act_window">
            <field name="name">CAFC</field>
            <field name="res_model">as.cafc</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_CAFC_tree" />
        </record>

        <menuitem id="as_CAFC_id" action="as_CAFC_action"
            parent="as_bo_invoice_client.as_invoice_bolivia_menu" name="CAFC" sequence="8" />

    </data>
</odoo>