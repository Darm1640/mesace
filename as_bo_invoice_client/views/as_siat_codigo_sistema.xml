<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="as_system_certificate_tree" model="ir.ui.view">
            <field name="name">C贸digo Sistema</field>
            <field name="model">as.siat.codigo.sistema</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="as_nit" />
                    <field name="as_razon_social" />
                    <field name="as_login" />
                    <field name="as_password" />
                    <field name="as_leyenda" />
                    <field name="as_token" />
                    <field name="as_date_expire" />

                </tree>
            </field>
        </record>

        <record id="as_system_certificate_form" model="ir.ui.view">
            <field name="name">C贸digo Sistema</field>
            <field name="model">as.siat.codigo.sistema</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="resquest_auth" string="Autenticar Ahorasoft" type="object"/>                             
                        <button name="consulta_certificado" string="Comprobar Certificado" type="object"/>                             
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="as_nit" />
                            <field name="as_razon_social" />
                            <field name="as_login" />
                            <field name="as_password" />
                            <field name="as_leyenda" />
                            <field name="as_token_ahorasoft" readonly="True" force_save = "1"/>
                        </group>
                        <group>
                            <field name="as_date_expire" />
                            <field name="as_token" style="word-wrap: break-word;max-width:900px" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="as_system_certificate_action" model="ir.actions.act_window">
            <field name="name">C贸digo Sistema</field>
            <field name="res_model">as.siat.codigo.sistema</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_system_certificate_tree" />
        </record>

        <menuitem id="as_system_certificate_menu" action="as_system_certificate_action"
            parent="as_bo_invoice_client.as_invoice_bolivia_menu" name="C贸digo Sistema" sequence="4"
            groups="account.group_account_manager" />


    </data>
</odoo>