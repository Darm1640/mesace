<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_cuadro_de_personal_retirado" model="ir.ui.view">
            <field name="name">Cuadro de personal retirado</field>
            <field name="model">as.report.cuadro.personal.retirado</field>
            <field name="arch" type="xml">
                <form string="Cuadro de personal retirado">
                    <group col="2">
                        <group>
                            <!-- <field name="start_date" />
                            <field name="end_date" /> -->
                            <field name="as_nombre_empleado" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" />  
                        </group>
                        <group>
                        </group>
                    </group>
                    <footer>
                        <button name="export_xls" default_focus="1" string="Exportar a Excel" type="object"
                            class="oe_highlight" context="{'xls_export':1}" icon="fa-download" />
                        <button name="imprimir_reporte_pdf" string="Exportar PDF" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_cuadro_personal_retirado" model="ir.actions.act_window">
            <field name="name">Cuadro de personal retirado</field>
            <field name="res_model">as.report.cuadro.personal.retirado</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_cuadro_de_personal_retirado" />
            <field name="target">new</field>
        </record>
        
        <report id="as_cuadro_personal_retirado_xlsx" 
        model="as.report.cuadro.personal.retirado" 
        string="Cuadro de personal retirado" 
        report_type="xlsx"
        name="as_bo_sale_route.as_cuadro_personal_retirado_xlsx.xlsx"
        file="as_bo_sale_route.as_cuadro_personal_retirado_xlsx.xlsx"
        attachment_use="False" />

        <menuitem 
        id="as_cuadro_personal_retirado" 
        name="Cuadro de personal retirado" 
        action="action_cuadro_personal_retirado"
        parent="hr.hr_menu_hr_reports" 
        sequence="120" 
        groups="base.group_user" />
    </data>
</odoo>