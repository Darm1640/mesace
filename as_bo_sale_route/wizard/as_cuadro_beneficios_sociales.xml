<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_cuadro_de_beneficios_sociales" model="ir.ui.view">
            <field name="name">Cuadro de Beneficios Sociales</field>
            <field name="model">as.report.cuadro.beneficios.sociales</field>
            <field name="arch" type="xml">
                <form string="Cuadro de beneficios sociales">
                    <group col="2">
                        <group>
                           
                            <field name="as_nombre_empleado" widget="many2many_tags" options="{&quot;always_reload&quot;: True, 'no_open': True,'no_create': 1, 'no_create_edit': 1}" />  
                            <field name="fecha" />
                        </group>
                        <group>
                           
                        </group>
                    </group>
                    <footer>
                        <button name="export_xls" default_focus="1" string="Exportar a Excel" type="object"
                            class="oe_highlight" context="{'xls_export':1}" icon="fa-download" />
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_cuadro_beneficios_sociales" model="ir.actions.act_window">
            <field name="name">Cuadro de beneficios sociales</field>
            <field name="res_model">as.report.cuadro.beneficios.sociales</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_cuadro_de_beneficios_sociales" />
            <field name="target">new</field>
        </record>
        
        <report id="as_cuadro_beneficios_sociales_xlsx" model="as.report.cuadro.beneficios.sociales" string="Cuadro de beneficios sociales" report_type="xlsx"
            name="as_bo_sale_route.as_cuadro_beneficios_sociales_xlsx.xlsx"
            file="as_bo_sale_route.as_cuadro_beneficios_sociales_xlsx.xlsx"
            attachment_use="False" />
        <menuitem id="as_cuadro_beneficios_sociales" name="Cuadro de beneficios sociales" action="action_cuadro_beneficios_sociales"
            parent="hr.hr_menu_hr_reports" sequence="122" groups="base.group_user" />
    </data>
</odoo>
