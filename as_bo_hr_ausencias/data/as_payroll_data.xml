<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Bono y Descuento Manual-->
        <record id="as_hr_inputs_bonus_100" model="as.hr.inputs">
            <field name="name">Abono asignado manual</field>
            <field name="code">INGRESOS02</field>
        </record>
        <record id="input_INGRESOS02" model="hr.payslip.input.type">
            <field name="code">INGRESOS02</field>
            <field name="name">Bono asignado manual</field>
            <field name="as_recargo">0</field>
            <field name="country_id" ref="base.bo" />
            <field name="struct_ids" eval="[(4, ref('as_bo_hr.structure_type_employee_employee'))]" />
        </record>
        <record id="as_hr_inputs_bonus_100" model="as.hr.inputs">
            <field name="name">Descuento asignado manual</field>
            <field name="code">OTRDES2</field>
        </record>
        <record id="input_OTRDES2" model="hr.payslip.input.type">
            <field name="code">OTRDES2</field>
            <field name="name">Descuento asignado manual</field>
            <field name="as_recargo">0</field>
            <field name="country_id" ref="base.bo" />
            <field name="struct_ids" eval="[(4, ref('as_bo_hr.structure_type_employee_employee'))]" />
        </record>
        <!--Bono y Descuento automatico-->
        <record id="as_hr_inputs_bonus_101" model="as.hr.inputs">
            <field name="name">Abono asignado automatico</field>
            <field name="code">INGRESOS03</field>
        </record>
        <record id="input_INGRESOS03" model="hr.payslip.input.type">
            <field name="code">INGRESOS03</field>
            <field name="name">Bono asignado automatico</field>
            <field name="as_recargo">0</field>
            <field name="country_id" ref="base.bo" />
            <field name="struct_ids" eval="[(4, ref('as_bo_hr.structure_type_employee_employee'))]" />
        </record>
        <record id="as_hr_inputs_discount_101" model="as.hr.inputs">
            <field name="name">Descuento asignado automatico</field>
            <field name="code">OTRDES3</field>
        </record>
        <record id="input_OTRDES3" model="hr.payslip.input.type">
            <field name="code">OTRDES3</field>
            <field name="name">Descuento asignado automatico</field>
            <field name="as_recargo">0</field>
            <field name="country_id" ref="base.bo" />
            <field name="struct_ids" eval="[(4, ref('as_bo_hr.structure_type_employee_employee'))]" />
        </record>





        <record id="as_bo_hr.hr_rule_6" model="hr.salary.rule">
            <field name="struct_id" ref="as_bo_hr.structure_type_employee_employee" />
            <field name="name">Otros Ingresos o Bonos</field>
            <field name="sequence" eval="6" />
            <field name="code">OTING</field>
            <field name="category_id" ref="hr_payroll.BASIC" />
            <field name="condition_select">python</field>
            <field name="condition_python">result = inputs.INGRESOS01 or inputs.INGRESOS02 or inputs.INGRESOS03</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">monto = 0.0
if inputs.INGRESOS01:
    monto+=inputs.INGRESOS01.amount
if inputs.INGRESOS02:
    monto+=inputs.INGRESOS02.amount
if inputs.INGRESOS03:
    monto+=inputs.INGRESOS03.amount
result = monto</field>
        </record>
        <record id="as_bo_hr.hr_rule_11" model="hr.salary.rule">
            <field name="struct_id" ref="as_bo_hr.structure_type_employee_employee" />
            <field name="name">Otros Descuentos</field>
            <field name="sequence" eval="11" />
            <field name="code">OTDES</field>
            <field name="category_id" ref="hr_payroll.DED" />
            <field name="condition_select">python</field>
            <field name="condition_python">result = inputs.OTRDES or inputs.OTRDES2 or inputs.OTRDES3</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">monto = 0.0
if inputs.OTRDES:
    monto+=inputs.OTRDES.amount
if inputs.OTRDES2:
    monto+=inputs.OTRDES2.amount
if inputs.OTRDES3:
    monto+=inputs.OTRDES3.amount
result = monto
</field>
        </record>
    </data>
</odoo>