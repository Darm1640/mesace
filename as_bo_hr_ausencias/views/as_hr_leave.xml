<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulario cliente, campos adicionales -->
        <record id="as_hr_hr_leave_form2" model="ir.ui.view">
            <field name="name">hr.leave.form.tree</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="as_motivo" attrs="{'invisible': [('as_permisos', '=', False)]}"/>
                    <field name="as_remunerada" attrs="{'invisible': [('as_permisos', '=', False)]}"/>
                    <field name="as_aprobado_un_dia" attrs="{'invisible': [('as_permisos', '=', False)]}"/>
                    <field name="as_disponible"  attrs="{'invisible': [('as_vaca', '=', False),('as_vaca_permiso', '=', False)]}" readonly="True" force_save="1"/>
                    <field name="as_periodos"  attrs="{'invisible': [('as_vaca', '=', False),('as_vaca_permiso', '=', False)]}" readonly="True" force_save="1"/>
                    <field name="as_saldo"  attrs="{'invisible': [('as_vaca', '=', False),('as_vaca_permiso', '=', False)]}" readonly="True" force_save="1"/>
                    <field name="as_vaca" invisible="True"/>
                    <field name="as_permisos" invisible="True"/>
                    <field name="as_vaca_permiso" invisible="True"/>
                </xpath>       
            
                <xpath expr="//sheet" position="inside">
                    <field name="as_periodos_ids" attrs="{'invisible': [('as_vaca', '=', False),('as_vaca_permiso', '=', False)]}"/>
    
                </xpath>     
                <xpath expr="//button[@name='action_refuse']" position="after">
                 <button name="as_get_periodos" type="object" string="Calcular Periodos" class="oe_highlight" attrs="{'invisible': [('as_vaca', '=', False),('as_vaca_permiso', '=', False)]}"/>
                   
                </xpath>         
            </field>
        </record>
    </data>
</odoo>