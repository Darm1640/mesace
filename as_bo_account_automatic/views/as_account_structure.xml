<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="as_structure_account_form" model="ir.ui.view">
            <field name="name">Estructuras de Asientos Contables</field>
            <field name="model">as.account.structure</field>
            <field name="arch" type="xml">
                <form string="Estructuras de Asientos Contables">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group col="2">
                            <field name="as_code" />
                            <field name="as_journal_id" />
                            <field name="as_glosa" />
                            <field name="as_validado" />
                        </group>
                            <field name="as_structure_lines">
                                <tree editable="bottom">
                                    <field name="as_code" />
                                    <field name="as_account" />
                                    <field name="as_glosa" />
                                    <field name="as_model_id" />
                                    <field name="as_field_id" domain="[('model_id','=', as_model_id)]"/>
                                    <field name="as_model_detail" invisible="True"/>
                                    <field name="as_detail_id" domain="[('model_id.model','=', as_model_detail)]"/>
                                    <field name="as_debe" />
                                    <field name="as_haber" />
                                    <field name="as_type" />

                                </tree>

                            </field>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="as_structure_account_tree" model="ir.ui.view">
            <field name="name">Estructuras de Asientos Contables</field>
            <field name="model">as.account.structure</field>
            <field name="arch" type="xml">
                <tree string="Estructuras de Asientos Contables">
                    <field name="as_code" />
                    <field name="name" />
                    <field name="as_journal_id" />
                    <field name="as_glosa" />
                    <field name="as_validado" />
                </tree>
            </field>
        </record>



        <record model="ir.actions.act_window" id="action_structure_account_nucleo">
            <field name="name">Estructuras de Asientos Contables</field>
            <field name="res_model">as.account.structure</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_structure_account_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haga clic aqu√≠ para empezar a crear su Estructuras de Asientos Contables.
                </p>
            </field>
        </record>

        <menuitem id="menu_structure_account_nucleo" name="Estructuras de Asientos Contables"
            action="action_structure_account_nucleo" parent="account.account_account_menu" sequence="8" />


    </data>
</odoo>