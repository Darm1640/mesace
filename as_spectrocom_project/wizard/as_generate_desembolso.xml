<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="as_reembolso_view_form" model="ir.ui.view">
        <field name="name">as_transfer</field>
        <field name="model">as.generate.tesoreria</field>
        <field name="arch" type="xml">
            <form string="Compute Asset" create="0">
                <div>
                    <p>
                        Wizard Generar Desembolso
                    </p>
                    <group col="4">

                        <field name="as_type" force_save="1"/>
                        <field name="date" />
                        <field name="as_journal_id" domain="[('as_type_journal','=', as_payment_type)]" />
                        <field name="as_caja_id" domain="[('as_user_id','=', uid)]"/>
                        <field name="as_payment_acquirer_id" />
                        <field name="as_numero_documento"
                            attrs="{'invisible' : [('as_metodo_pago_bolean', '=', 0)]}" />
                        <field name="as_bank_id"
                            attrs="{'invisible' : ['|',('as_metodo_pago_bolean', '=', 0),('as_metodo_pago_bolean', '=', 4)]}" />
                        <field name="as_payment_type" />
                        <field name="as_amount" />
                        <field name="as_partner_id" />
                        <field name="as_analytic_account_id" />
                        <field name="as_note" />
                        <field name="as_task_id" />
                        <field name="as_metodo_pago_bolean" invisible="True"/>
                        <field name="as_is_diff" invisible="True"/>
                        <field name="as_is_diff_negativa" invisible="True"/>
                    </group>
                </div>
                <footer>
                    <button name="as_get_process" type="object" string="Procesar" />
                </footer>
            </form>
        </field>
    </record>


    <record id="as_wiz_transfer_tesoreria_return" model="ir.actions.act_window">
        <field name="name">Realizar Transferencias</field>
        <field name="res_model">as.generate.tesoreria</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="as_reembolso_view_form" />
        <field name="target">new</field>
        <field name="binding_model_id" ref="" />
    </record>

</odoo>