<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_sale_order_custodio_id" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="name">as.sale.order.custodio</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_policy']" position="before">
                <field name="as_custodio_id" />
            </xpath>
            <xpath expr="//field[@name='date_order']"
                position="after">
                <field name="as_permiso_cancelar"  groups="as_spectrocom_project.group_cancel_see"/>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="replace">
                <button name="action_cancel" confirm="Esta seguro de cancelar la venta?" type="object" string="Cancel" attrs="{'invisible': [('as_permiso_cancelar','=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>