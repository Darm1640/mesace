<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="as_template_plantilla" model="ir.ui.view">
            <field name="name">as.template.plantilla</field>
            <field name="model">as.plantillas.template</field>
            <field name="arch" type="xml">
                <tree string="Plantillas">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="as_tipo_platilla_KJ" model="ir.ui.view">
            <field name="name">as.template.plantilla</field>
            <field name="model">as.plantillas.template</field>
            <field name="arch" type="xml">
                <form string="Plantilla de proyectos">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre de Plantilla" />
                            </h1>
                        </div>
                        <group col="4">
                            <notebook name='notebook'>
                                <page string="Valoracion">
                                    <field name="template_cost_lines">
                                        <form string="Lineas de pñantilla">
                                            <group>
                                                <group>
                                                    <field name="name" />
                                                    <field name="price_unit" />
                                                </group>
                                                <!-- <group>
                                                    <field name="split_method" />
                                                    <field name="account_id" />
                                                </group> -->
                                            </group>
                                        </form>
                                        <tree string="Lineas de p" editable="bottom" >
                                            <!-- <field name="product_id" context="{'default_type': 'service','default_landed_cost_ok': True}" domain="[('type','=','service'),('landed_cost_ok','=',True)]" /> -->
                                            <!-- <field name="name" /> -->
                                            <field name="general_budget_id" />
                                            <field name="price_unit" sum="Total Amount" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="as_plantilla_action" model="ir.actions.act_window">
            <field name="name">Plantillas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">as.plantillas.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="as_template_plantilla" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Haga clic aquí para empezar a crear su primer planilla de importacion.
                </p>
            </field>
        </record>

        <menuitem parent="account.account_management_menu"
              id="as_plantilla_action_as"
              action="as_plantilla_action"
              sequence="30"/>
    </data>
</odoo>