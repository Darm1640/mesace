<?xml version="1.0" encoding="utf-8"?>
<odoo>  
<data>
        <record id="as_boton_hecho" model="ir.ui.view">
            <field name="name">as.boton.hecho</field>
            <field name="model">as.request.materials</field>
            <field name="inherit_id" ref="as_spectrocom_project.as_request_material_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <field name="as_bandera" invisible="True"/>
                    <button name="action_hecho" string="GENERAR NOTA DE REMISION" type="object" class="oe_highlight" states="done"/>
                    <button name="action_devolver" string="Devolver transferencia" type="object" class="oe_highlight" attrs="{'invisible': [('as_bandera',  '=', False)]}"/>
                    <button name="action_cancelar" string="Cancelar DevoluciÃ³n" type="object" class="oe_highlight"/>
                    <button name="action_copiar_lineas_ventas" string="Cargar productos" type="object" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
        <report
        id="as_reporte_nota_remision"
        string="Orden de Remision (PDF)"
        model="as.request.materials"
        report_type="qweb-pdf"
        name="as_spectrocom_project.as_orden_remision_pdf"
        file="as_spectrocom_project.as_orden_remision_pdf"
        menu="False"
      />
      <record id="as_orden_remision" model="report.paperformat">
        <field name="name">Reporte de NOTA DE REMISOioN PDF</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">278</field>
        <field name="page_width">214</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="orientation">Portrait</field>
        <field name="header_spacing">0</field>
        <field name="report_ids" eval="[(4, ref('as_spectrocom_project.as_reporte_nota_remision'))]"/>
      </record> 
    </data>     
</odoo>