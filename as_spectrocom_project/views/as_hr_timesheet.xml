<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_view_task_form2_inherited" model="ir.ui.view">
        <field name="name">as.view.task.form2.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
        <field name="arch" type="xml">
            <xpath expr="//tree[@editable='bottom']" position="replace">
                <tree editable="bottom" string="Timesheet Activities" default_order="date">
                    <field name="date" />
                    <field name="user_id" invisible="1" />
                    <field name="employee_id" required="1" widget="many2one_avatar_employee" />
                    <field name="name" required="0" />
                    <field name="as_tipo_contrato" />
                    <field name="as_duracion" />
                    <field name="unit_amount" widget="timesheet_uom" decoration-danger="unit_amount &gt; 24" />
                    <field name="project_id" invisible="1" />
                    <field name="task_id" invisible="1" />
                    <field name="company_id" invisible="1" />
                </tree>
            </xpath>
            <xpath expr="//field[@name='planned_hours']" position="replace">
                    <field name="planned_hours" widget="timesheet_uom_no_toggle" />
            </xpath>
            <xpath expr="//label[@for='planned_hours']" position="replace">
                    <label for="planned_hours" string="Initially Planned Hours" invisible="True"/>
            </xpath>

            <xpath expr="//field[@name='planned_hours']" position="after">
                    <field name="as_u_tiempo" widget="radio"  options="{'horizontal': true}" invisible="True"/>
                    <field name='as_medida_tiempo' domain="[('category_id', '=', 3)]"/>
                    <field name='as_unidad'/>
                    <!-- <field name='as_hora'/> -->
            </xpath>
            <xpath expr="//page[@name='description_page']" position="replace">
                <page name="description_page" string="Instructiva">
                    <field name="description" type="html" readonly="True"/>
                    <div class="d-none oe_clear"/>
                </page>
            </xpath>
            <xpath expr="//page[@name='description_page']" position="after">
                <page name="description_page" string="OT">
                    <field name="as_description_ot" type="html"/>
                    <div class="d-none oe_clear"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>