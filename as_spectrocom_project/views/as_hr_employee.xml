<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_view_employee_form" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="name">as.view.employee.form</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_email']" position="after">
                <field name="as_vehiculo" />
            </xpath>
            <xpath expr="//page[@name='personal_information']" position="inside">
                <group string="Datos del conductor">
                    <group>
                        <field name="as_numero_licencia" />
                        <field name="as_categoria" />
                        <field name="as_vencimiento" />
                        <field name="as_vencimiento_md" />
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='coach_id']" position="after">
                <field name="as_codigo_empleado" />
            </xpath>
        </field>
    </record>
</odoo>