<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_view_picking_form2" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="name">as.stock.picking.form</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_dest_id']" position="after">
                <field name="as_custodio_id" />
            </xpath> 
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="as_solicitud_id" string="Codigo/Proyecto"/>
            </xpath>
        </field>
    </record>
    <record id="as_view_picking_tree2" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="name">as.stock.picking.tree</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="before">
                <field name="as_custodio_id" />
            </xpath>
        </field>
    </record>
    <record id="as_view_stock_location_form2" model="ir.ui.view">
        <field name="model">stock.location</field>
        <field name="name">as.stock.location.form</field>
        <field name="inherit_id" ref="stock.view_location_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="as_solicitud" />
            </xpath>
        </field>
    </record>
</odoo>