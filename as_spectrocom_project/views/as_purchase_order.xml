<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_inherit" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="as_project_id" />
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position="replace">
                <button name="button_cancel"  attrs="{'invisible': [('as_permiso_cancelar','=', False)]}" confirm="Esta seguro de cancelar la compra?" string="Cancel" type="object" />
            </xpath>
            <xpath expr="//field[@name='as_solicitante']"
                position="before">
                <field name="as_permiso_cancelar"  groups="as_spectrocom_project.group_cancel_see"/>
            </xpath>

        </field>
    </record>
</odoo>