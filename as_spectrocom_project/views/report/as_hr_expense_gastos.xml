<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="reporte_hoja_rendicio">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="header">
                    </div>
                </t>
            </t>
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <style type="text/css">
                    </style>
                    <div class="row mt0 mb0 " id="as_header">
                        <div class="col-6"
                            style="text-align:center; margin-bottom:0px;font-size:10px; width:35%;margin-top:-35px">
                            <img t-att-src="image_data_uri(o.company_id.logo)"
                                style="height: 90px; width: 270px; text-align: center; " />
                        </div>
                        <div class="col-5" style="text-align:center; width: 35%; margin-top:0px;margin-left:-30px;margin-top:-20px;">
                            <div style="text-align: center; font-size: 26px;">
                                <table width="100%" class="table table-light" style="border-color: #F5FFFA; ">

                                    <tr>
                                        <td style="font-size: 27px; color:#00008B;">
                                            <b>REGISTRO</b> <br />
                                            <b>HOJA DE RENDICION</b>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="" style="width: 20%;text-align:left;">
                            
                            <br />
                            <h4>
                                <div
                                    style="text-align:left; font-size: 14px; line-height: 2px;margin-left:0px;color:#00008B">
                                    <p><b>NÂº de Reg.</b>
                                    </p>
                                </div>
                            </h4>
                        </div>
                        <div class="" style="width: 10%;text-align:left;">
                            
                            <br />
                            <h4>
                                <div style="text-align:center; font-size: 14px; line-height: 2px;margin-left:-10px;">
                                    <p><b><span style="color:black;" t-esc="o.as_nro" /></b>
                                    </p>
                                </div>
                            </h4>
                        </div>
                    </div>
                    <div style="margin-left:18px;margin-top:-15px;text-align:center;">
                        <br/>

                    </div>
                    <div style="margin-left:5px;margin-right:5px;margin-top:0px;">
                        <table width="100%" class="table table-light">
                            <tr>
                                <td style="text-align: left; font-size:14px;line-height:1px; color:#00008B">
                                    <b>Responsable: </b>
                                    <span style="color:black;" t-esc="o.sudo().as_proyecto_id.user_id.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: left; font-size:14px;line-height:1px;  color:#00008B;line-height:18px;">
                                    <b>Personal que viajan: </b>
                                    <span style="color:black;" t-esc="o.lineas_empleados('empleados')" />
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: left; font-size:14px;color:#00008B">
                                    <b>Proyecto o motivo del Gasto: </b>
                                    <span style="color:black;" t-esc="o.as_proyecto_id.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: left; font-size:14px;line-height:1px;   color:#00008B">
                                    <b>Lugar de Gasto: </b>
                                    <span style="color:black;"
                                        t-esc="o.sudo().as_proyecto_id.project_id.sale_order_id.as_alias_lugar" />
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: left; font-size:14px;line-height:1px;   color:#00008B">
                                    <b>Cliente: </b>
                                    <span style="color:black;" t-esc="o.as_proyecto_id.partner_id.name" />
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: left; font-size:14px;line-height:1px;   color:#00008B">
                                    <b>Fecha Reporte de Gastos: </b>
                                    <span style="color:black;" t-esc="o.as_date_row" />
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: left; font-size:14px;line-height:1px;   color:#00008B">
                                    <b>Importe a rendir: </b>
                                    <span style="color:black;" t-esc="o.sudo().as_proyecto_id.as_presupuesto_viaticos" />
                                </td>
                            </tr>

                        </table>
                    </div>
                    <div style="margin-left:5px;margin-right:5px;margin-top:-10px;">
                        <table width="100%" class="table table-light">

                            <tr>
                                <td
                                    style="text-align: left; font-size:14px;line-height:1px; width:20%;   color:#00008B">
                                    <b>Efectivo: <input type="checkbox" id="" name="colors" value="Efectivo" /></b>
                                </td>
                                <td
                                    style="text-align: left; font-size:14px;line-height:1px; width:20%;   color:#00008B">

                                    <b>Contabilidad: <input type="checkbox" id="" name="colors"
                                            value="Contabilidad" /></b>
                                </td>
                                <td
                                    style="text-align: left; font-size:14px;line-height:1px; width:20%;   color:#00008B">

                                    <b>Caja chica: <input type="checkbox" id="" name="colors" value="Caja chica" /></b>
                                </td>
                                <td
                                    style="text-align: left; font-size:14px;line-height:1px; width:20%;   color:#00008B">

                                    <b>Otros, Especifique: <input type="checkbox" id="" name="colors"
                                            value="Otros, Especifique" /></b>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div>
                    </div>
                    <div class="page" style="font-family: 'Arial' !important; ">
                        <style type="text/css">

                        </style>
                        <div style="margin-top:-5px;margin-left:15px;margin-right:15px;">
                            <table width="100%" id="header_table">
                                <thead>
                                    <tr>
                                        <td
                                            style="text-align: center; font-size:14px; width:20%;color: #fff;
                                        background-color: #00008B; margin-right: auto; margin-left: auto; border-color: black; border:1px solid black;line-height: 20px;">
                                            <b>FECHA</b>
                                        </td>
                                        <td
                                            style="text-align:center; font-size:14px; width:25%;color: #fff;
                                        background-color: #00008B; text-wrap: True; margin-right: auto; margin-left: auto; border-color: black; border:1px solid black;line-height: 20px;">
                                            <b>No. FACTURA/ No.RECIBO</b>
                                        </td>
                                        <td
                                            style="text-align: center; font-size:14px; width:40%;color: #fff;
                                        background-color: #00008B; text-wrap: True; margin-right: auto; margin-left: auto; border-color: black; border:1px solid black;line-height: 20px;">
                                            <b>DETALLE</b>
                                        </td>
                                        <td
                                            style="text-align: center; font-size:14px; width:15%;color: #fff;
                                        background-color: #00008B; text-wrap: True; margin-right: auto; margin-left: auto; border-color: black; border:1px solid black;line-height: 20px;">
                                            <b>Bs.</b>
                                        </td>
                                    </tr>
                                </thead>
                                <thead style='border:1px solid grey' id="body_table">
                                    <t t-set="weight" t-value="0.00" />
                                    <div t-foreach="o._lineas_ordenadas()" t-as="d" width="100%">
                                        <tr>
                                            <td
                                                style="text-align: center; font-size:14px; width:20%;text-wrap: True; border-color: black; border:1px solid black;">
                                                <t t-esc="d.date" />
                                            </td>
                                            <td
                                                style="text-align: center; font-size:14px; width:25%; text-wrap: True; border-color: black; border:1px solid black;">
                                                <tspan t-esc="d.reference" />
                                            </td>
                                            <td
                                                style="text-align: left; font-size:14px; width:40%; text-wrap: True;border-color: black; border:1px solid black;">
                                                <tspan t-esc="d.name" style="margin-left:6px;" />
                                            </td>
                                            <td
                                                style="text-align: right; font-size:14px; width:15%; text-wrap: True; border-color: black; border:1px solid black;">
                                                <tspan t-esc="'{:.2f}'.format(d.unit_amount*d.quantity)"
                                                    style="margin-right:5px;" />
                                                <!-- <tspan t-esc="d.currency_id.name" style="margin-left:6px;" /> -->
                                            </td>
                                        </tr>
                                    </div>
                                </thead>
                                <thead>
                                    <tr>
                                        <td colspan="3" style="text-align: right; font-size:14px; color: black;">
                                            <b style="margin-right:10px;">TOTALES</b>
                                        </td>
                                        <td colspan="1" style="text-align: right; font-size:14px; color: black;text-wrap: True; border-color: black; border:1px solid black; color: #fff;
                                        background-color: #00008B;">
                                            <b style="margin-right:6px;">
                                                <t t-esc="'{:,.2f}'.format(o.total_amount)" /></b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" style="text-align: right; font-size:14px; color: black;">
                                            <b style="margin-right:10px;">ENTREGADO</b>
                                        </td>
                                        <td colspan="1" style="text-align: right; font-size:14px; color: black;text-wrap: True; border-color: black; border:1px solid black; color: #fff;
                                        background-color: #00008B;">
                                            <b style="margin-right:6px;">
                                                <t t-esc="'{:,.2f}'.format(o.sudo().as_proyecto_id.as_presupuesto_viaticos)" /></b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" style="text-align: right; font-size:14px; color: black;">
                                            <b style="margin-right:10px;">SALDO</b>
                                        </td>
                                        <td colspan="1" style="text-align: right; font-size:14px; color: black;text-wrap: True; border-color: black; border:1px solid black; color: #fff;
                                        background-color: #00008B;">
                                            <b style="margin-right:6px;">
                                                <t t-esc="'{:,.2f}'.format((o.sudo().as_proyecto_id.as_presupuesto_viaticos-o.total_amount))" /></b>
                                        </td>
                                    </tr>
                                </thead>
                            </table>
                            <table width="100%" id="header_table">
                                <thead style='border:1px solid #FFFFFF;line-height : 20px;'>
                                    <tr>
                                        <td colspan="4" style="text-align: left; font-size:14px; width:50%;">
                                        <br />
                                            <p>
                                                <b style="margin-left: 0px; color:#00008B"><u>
                                                        OBSERVACIONES: ** SI EL MONTO DEL SALDO ES NEGATIVO LA EMPRESA
                                                        DEVUELVE AL FUNCIONARIO EN ESTE CASO COMO ES POSITIVO EL
                                                        FUNCIONARIO DEVUELVE A LA EMPRESA
                                                    </u></b>
                                            </p>
                                        </td>
                                    </tr>
                                </thead>
                            </table>
                            <br />
                            <br />
                            <br />


                            <table width="100%" class="table table-borderless">
                                <thead style='border:1px solid #FFFFFF;line-height : 20px;'>
                                    <tr>
                                        <td style="text-align: center; font-size:14px; width:20%;">
                                            <b> __________________</b><br />
                                            <b style="color:#00008B"> Elaborado</b><br />
                                        </td>
                                        <td style="text-align: center; font-size:14px; width:20%;">
                                            <br />
                                            <br />
                                            <b> __________________</b><br />
                                            <b> VoBo. Contabilidad</b><br />
                                        </td>
                                        <td style="text-align: center; font-size:14px; width:20%;">
                                            <b> __________________</b><br />
                                            <b style="color:#00008B"> Revisado</b><br />

                                        </td>

                                    </tr>

                                </thead>
                            </table>
                            <br />
                        </div>

                    </div>
                </t>
            </t>
        </template>
        <template id="as_hoja_de_gastos_pdf">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">

                    <t t-call="as_spectrocom_project.reporte_hoja_rendicio" t-lang="lang" />
                </t>
                <p style="page-break-after:always;" />
            </t>
        </template>
    </data>
</odoo>