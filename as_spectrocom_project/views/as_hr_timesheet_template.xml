<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_timesheet_plan_inherit" model="ir.ui.view">
        <field name="name">as.project.project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="sale_timesheet.timesheet_plan" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_profitability_section'][2]" position="replace">
                <div class="o_profitability_section">
                    <div>
                        <table class="table">
                            <tbody>
                                <th>
                                    <a type="action" data-model="project.profitability.report"
                                        t-att-data-domain="json.dumps(profitability_domain)"
                                        data-context="{'group_by_no_leaf':1, 'group_by':[], 'sale_show_order_product_name': 1}"
                                        data-views='[[0, "pivot"], [0, "graph"]]' tabindex="-1">Profitability</a>
                                </th>
                                <tr>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['invoiced']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td title="Revenues linked to Timesheets already invoiced.">
                                        Facturado
                                    </td>
                                </tr>
                                <tr>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['as_purchase']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td title="Revenues linked to Timesheets already invoiced.">
                                        Compras
                                    </td>
                                </tr>
                                <tr>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['to_invoice']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td title="Revenues linked to Timesheets not yet invoiced.">
                                        A Facturar
                                    </td>
                                </tr>
                                <tr>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['as_eventual']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td title="Revenues linked to Timesheets already invoiced.">
                                        Costo de empleados eventuales
                                    </td>
                                </tr>
                                <tr>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['as_mensual']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td title="Revenues linked to Timesheets already invoiced.">
                                        Costo de empleados internos
                                    </td>
                                </tr>
                                <tr>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['as_viatico']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td title="Revenues linked to Timesheets already invoiced.">
                                        Viaticos ejecutados
                                    </td>
                                </tr>
                                <tr t-if="dashboard['profit']['other_revenues'] > 0">
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['other_revenues']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td
                                        title="All revenues that are not from timesheets and that are linked to the analytic account of the project.">
                                        Otros ingresos</td>
                                </tr>
                                <tr>
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['cost']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td
                                        title="This cost is based on the &quot;Timesheet cost&quot; set in the HR Settings of your employees.">
                                        Costos de la hoja de horas
                                    </td>
                                </tr>
                                <tr t-if="display_cost">
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['expense_cost']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td title="Any cost linked to the Analytic Account of the Project.">
                                        Otros costos
                                    </td>
                                </tr>
                                <tr
                                    t-if="display_cost &amp; (dashboard['profit']['expense_amount_untaxed_invoiced'] != 0)">
                                    <td class="o_timesheet_plan_dashboard_cell">
                                        <t t-esc="dashboard['profit']['expense_amount_untaxed_invoiced']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' />
                                    </td>
                                    <td
                                        title="Costs from expenses that were reinvoiced to your customer (provided that the Analytic Account of the Project was set on the Expense).">
                                        Costos refacturados
                                    </td>
                                </tr>
                                <tr>
                                    <td class="o_timesheet_plan_dashboard_total">
                                        <b>
                                            <t t-esc="dashboard['profit']['total']"
                                                t-options='{"widget": "monetary", "display_currency": currency}' />
                                        </b>
                                    </td>
                                    <td><b>Total</b></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@class='o_timesheet_plan_sale_timesheet_dashboard']" position="after">
                <div class="o_title">
                    <h2>Presupuesto Planificado Vs Presupuesto Ejecutado</h2>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Presupuesto Planificado</th>
                            <th>   <t t-esc="dashboard['profit']['as_planificado']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' /></th>
                        </tr>
                        <tr>
                            <th>Presupuesto Ejecutado</th>
                               <th>   <t t-esc="dashboard['profit']['as_ejecutado']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' /></th>
                        </tr>
                        <tr>
                            <th>Diferencia</th>
                               <th>   <t t-esc="dashboard['profit']['as_diferencia']"
                                            t-options='{"widget": "monetary", "display_currency": currency}' /></th>
                        </tr>
                    </thead>
                </table>
            </xpath>
        </field>
    </record>
</odoo>