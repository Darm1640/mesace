<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_part_num_add" model="ir.ui.view">
            <field name="name">product.template.product.part.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                    <label for="product_part_num" attrs="{'invisible': [('sale_ok', '=', False)]}"/>
                    <div attrs="{'invisible': [('sale_ok', '=', False)]}">
                        <field name="product_part_num" class="oe_inline" style="vertical-align:baseline"/>
                    </div>
                </xpath>
            </field>
    </record>
    <record id="view_product_template_kanban_part" model="ir.ui.view">
        <field name="name">product kanban view: add part</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_brand.view_product_template_kanban_brand" />
        <field name="arch" type="xml">
            <div id="div_product_brand_kanban" position="after">
                <div>
                       Nro Parte: <field name="product_part_num" />              
                </div>
            </div>
        </field>
    </record>
</odoo>