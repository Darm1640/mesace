<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_crm_lead_view_form" model="ir.ui.view">
        <field name="model">crm.lead</field>
        <field name="name">as.crm.lead.form</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lead']" position="after">
                <page name="firma" string="Firmas">
                    <group>
                        <field name="as_worker_signature" widget="signature" />
                        <field name="as_customer_signature" widget="signature" />
                    </group>
                </page>
            </xpath>
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="after">
                <button name="action_print_service" string="Informe relevamiento" type="object" />
                <!-- <button name="action_crm_send" string="Enviar Email" type="object" /> -->
                <button name="action_crm_send" string="Enviar Email" type="object" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="as_nro" readonly="True"/>
                <field name="as_date_row" />
            </xpath>
        </field>
    </record>
    <record id="as_crm_lead_view_form_ocultar_page" model="ir.ui.view">
        <field name="model">crm.lead</field>
        <field name="name">as.crm.lead.form.ocultar.page</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lead']" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>
            
        </field>
    </record>
    <record id="as_crm_lead_view_form_ocultar_campos" model="ir.ui.view">
        <field name="model">crm.lead</field>
        <field name="name">as.crm.lead.form.ocultar.campos</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='priority']" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>