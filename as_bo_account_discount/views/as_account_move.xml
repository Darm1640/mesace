<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="as_account_amove_view11" model="ir.ui.view">
        <field name="name">as.account.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
        
            <xpath expr="//field[@name='invoice_payment_term_id']/.." position="after">
                <field name="as_amount_discount" readonly="True" force_save="1"/>
            </xpath>            
            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <field name="global_discount_item" optional="hide"/>
            </xpath>
          
        </field>
    </record>
   
</odoo>